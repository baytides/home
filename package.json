{
  "name": "baytides-website",
  "version": "1.0.0",
  "type": "module",
  "description": "Bay Tides nonprofit website",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:css": "sass assets/scss/style.scss assets/css/style.css --style=compressed",
    "build:worker": "cd workers/form-handler && wrangler deploy",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "typecheck:worker": "tsc --noEmit -p workers/form-handler/tsconfig.json",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/baytides/home.git"
  },
  "author": "Bay Tides",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/baytides/home/issues"
  },
  "homepage": "https://baytides.org",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251231.0",
    "@types/node": "^25.0.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "sass": "^1.97.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.0"
  },
  "lint-staged": {
    "*.{js,ts,json}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{html,css,scss,md}": [
      "prettier --write"
    ]
  }
}
