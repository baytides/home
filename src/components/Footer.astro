<script>
  async function loadSnowflakeStats() {
    try {
      const res = await fetch(
        'https://baytidesstorage.blob.core.windows.net/snowflake-stats/stats.json'
      );
      if (!res.ok) return;
      const data = await res.json();
      const el = document.getElementById('snowflake-count');
      if (el && data.totalConnections > 0) {
        el.textContent = `Users helped: ${data.totalConnections.toLocaleString()}`;
      }
    } catch {
      // Stats are non-critical; fail silently
    }
  }
  loadSnowflakeStats();
</script>
