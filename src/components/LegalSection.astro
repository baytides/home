---
/**
 * LegalSection Component
 * A collapsible section for legal documents with simple language toggle support
 */

interface Props {
  title: string;
  sectionNumber?: number;
  simpleSummary?: string;
  defaultOpen?: boolean;
}

const { title, sectionNumber, simpleSummary, defaultOpen = false } = Astro.props;
const sectionId = `section-${sectionNumber || title.toLowerCase().replace(/\s+/g, '-')}`;
---

<div class="legal-section" id={sectionId} data-default-open={defaultOpen ? 'true' : 'false'}>
  <button
    class="legal-section-header"
    aria-expanded={defaultOpen ? 'true' : 'false'}
    aria-controls={`${sectionId}-content`}
    type="button"
  >
    <div class="legal-section-title">
      <span class="legal-section-icon">
        <slot name="icon" />
      </span>
      <h2>
        {sectionNumber && <span class="section-number">{sectionNumber}.</span>}
        {title}
      </h2>
    </div>
    <svg
      class="legal-section-chevron"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
      aria-hidden="true"
    >
      <polyline points="6 9 12 15 18 9"></polyline>
    </svg>
  </button>

  <div class="legal-section-content" id={`${sectionId}-content`} aria-hidden={!defaultOpen}>
    {
      simpleSummary && (
        <div class="simple-text" data-simple-text>
          <p>{simpleSummary}</p>
        </div>
      )
    }
    <div class="full-text" data-full-text>
      <slot />
    </div>
  </div>
</div>

<style>
  .legal-section {
    border: 1px solid var(--border-color, #e2e8f0);
    border-radius: 12px;
    margin-bottom: 1rem;
    overflow: hidden;
    transition: box-shadow 0.2s ease;
  }

  .legal-section:hover {
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }

  .legal-section-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    padding: 1.25rem 1.5rem;
    background: var(--bg-secondary, #f8fafc);
    border: none;
    cursor: pointer;
    text-align: left;
    transition: background-color 0.2s ease;
    font-family: inherit;
  }

  .legal-section-header:hover {
    background: var(--hover-bg, #f1f5f9);
  }

  .legal-section-header:focus-visible {
    outline: 3px solid var(--focus-ring-color, #005fcc);
    outline-offset: -3px;
  }

  .legal-section-title {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .legal-section-title h2 {
    font-size: 1.125rem;
    font-weight: 600;
    margin: 0;
    color: var(--text-dark);
  }

  .section-number {
    color: var(--primary-blue);
    margin-right: 0.25rem;
  }

  .legal-section-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    min-width: 36px;
    background: var(--primary-blue);
    border-radius: 8px;
    color: white;
  }

  .legal-section-icon:empty {
    display: none;
  }

  .legal-section-icon :global(svg) {
    width: 20px;
    height: 20px;
  }

  .legal-section-chevron {
    flex-shrink: 0;
    color: var(--text-light);
    transition: transform 0.3s ease;
  }

  .legal-section-header[aria-expanded='true'] .legal-section-chevron {
    transform: rotate(180deg);
  }

  .legal-section-content {
    display: none;
    padding: 1.5rem;
    background: var(--bg-primary, #fff);
    border-top: 1px solid var(--border-color, #e2e8f0);
  }

  .legal-section-content[aria-hidden='false'] {
    display: block;
    animation: slideDown 0.3s ease;
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Simple language summary box */
  .simple-text {
    display: none;
    padding: 1rem 1.25rem;
    background: linear-gradient(135deg, var(--light-blue) 0%, rgba(43, 108, 176, 0.08) 100%);
    border-radius: 10px;
    border-left: 4px solid var(--primary-blue);
    margin-bottom: 1rem;
  }

  .simple-text p {
    margin: 0;
    font-size: 1rem;
    line-height: 1.6;
    color: var(--text-dark);
  }

  /* Show simple text when simple language mode is enabled */
  :global(.simple-language-mode) .simple-text {
    display: block;
  }

  :global(.simple-language-mode) .full-text {
    display: none;
  }

  /* Full text styling */
  .full-text :global(p) {
    margin-bottom: 1rem;
    line-height: 1.7;
    color: var(--text-dark);
  }

  .full-text :global(p:last-child) {
    margin-bottom: 0;
  }

  .full-text :global(ul) {
    margin: 1rem 0;
    padding-left: 1.5rem;
  }

  .full-text :global(li) {
    margin-bottom: 0.5rem;
    line-height: 1.6;
    color: var(--text-dark);
  }

  .full-text :global(h3),
  .full-text :global(h4) {
    font-size: 1rem;
    font-weight: 600;
    margin: 1.5rem 0 0.75rem;
    color: var(--text-dark);
  }

  .full-text :global(a) {
    color: var(--primary-blue);
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .full-text :global(a:hover) {
    color: var(--primary-navy);
  }

  /* Dark mode */
  :global([data-theme='dark']) .legal-section {
    border-color: rgba(255, 255, 255, 0.1);
  }

  :global([data-theme='dark']) .legal-section:hover {
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
  }

  :global([data-theme='dark']) .legal-section-header {
    background: rgba(255, 255, 255, 0.03);
  }

  :global([data-theme='dark']) .legal-section-header:hover {
    background: rgba(255, 255, 255, 0.06);
  }

  :global([data-theme='dark']) .legal-section-icon {
    background: var(--accent-blue);
    color: #0c1729;
  }

  :global([data-theme='dark']) .section-number {
    color: var(--accent-blue);
  }

  :global([data-theme='dark']) .legal-section-content {
    background: var(--bg-primary);
    border-top-color: rgba(255, 255, 255, 0.1);
  }

  :global([data-theme='dark']) .simple-text {
    background: linear-gradient(135deg, rgba(125, 211, 252, 0.15) 0%, rgba(43, 108, 176, 0.1) 100%);
    border-left-color: var(--accent-blue);
  }

  :global([data-theme='dark']) .full-text :global(a) {
    color: var(--accent-blue);
  }

  :global([data-theme='dark']) .full-text :global(a:hover) {
    color: #a5f3fc;
  }

  @media (max-width: 640px) {
    .legal-section-header {
      padding: 1rem 1.25rem;
    }

    .legal-section-title h2 {
      font-size: 1rem;
    }

    .legal-section-icon {
      width: 32px;
      height: 32px;
      min-width: 32px;
    }

    .legal-section-icon :global(svg) {
      width: 18px;
      height: 18px;
    }

    .legal-section-content {
      padding: 1rem 1.25rem;
    }
  }
</style>

<script>
  // Accordion toggle functionality for individual sections
  function initLegalSections() {
    const sections = document.querySelectorAll('.legal-section');

    sections.forEach((section) => {
      const header = section.querySelector('.legal-section-header') as HTMLButtonElement;
      const content = section.querySelector('.legal-section-content') as HTMLElement;
      const defaultOpen = section.getAttribute('data-default-open') === 'true';

      if (!header || !content) return;

      // Set initial state
      if (defaultOpen) {
        header.setAttribute('aria-expanded', 'true');
        content.setAttribute('aria-hidden', 'false');
      }

      header.addEventListener('click', () => {
        const isExpanded = header.getAttribute('aria-expanded') === 'true';

        // Toggle state
        header.setAttribute('aria-expanded', String(!isExpanded));
        content.setAttribute('aria-hidden', String(isExpanded));
      });
    });
  }

  // Initialize on DOM ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initLegalSections);
  } else {
    initLegalSections();
  }

  // Re-initialize on Astro page transitions
  document.addEventListener('astro:page-load', initLegalSections);
</script>
