---
import BaseLayout from '../layouts/BaseLayout.astro';
import Breadcrumb from '../components/Breadcrumb.astro';
import PageHero from '../components/PageHero.astro';
import Card from '../components/Card.astro';
import SponsorsCarousel from '../components/SponsorsCarousel.astro';

const structuredData = [
  {
    '@context': 'https://schema.org',
    '@type': 'DonateAction',
    recipient: {
      '@type': 'NonprofitOrganization',
      name: 'Bay Tides',
      url: 'https://baytides.org',
      description: 'Bay Tides empowers communities to protect and preserve the San Francisco Bay.',
    },
    potentialAction: {
      '@type': 'DonateAction',
      target: 'https://baytides.org/checkout',
    },
  },
  {
    '@context': 'https://schema.org',
    '@type': 'BreadcrumbList',
    itemListElement: [
      { '@type': 'ListItem', position: 1, name: 'Home', item: 'https://baytides.org/' },
      { '@type': 'ListItem', position: 2, name: 'Donate' },
    ],
  },
];
---

<BaseLayout
  title="Donate"
  description="Support Bay Tides with a donation. Your contribution helps fund digital tools, educational programs, and community mobilization to protect the San Francisco Bay."
  canonicalUrl="https://baytides.org/donate"
  structuredData={structuredData}
  preloadImages={['/assets/video/donate-hero-poster.webp']}
>
  <Breadcrumb items={[{ label: 'Home', href: '/' }, { label: 'Donate' }]} />

  <!-- Video Hero -->
  <section class="hero hero-page donate-video-hero">
    <video
      class="donate-hero-video"
      autoplay
      muted
      loop
      playsinline
      poster="/assets/video/donate-hero-poster.webp"
    >
      <source src="/assets/video/donate-hero.webm" type="video/webm" />
    </video>
    <div class="donate-hero-overlay"></div>
    <div class="container">
      <h1>Support Our Mission</h1>
      <p>Your generosity helps protect and restore the San Francisco Bay for future generations</p>
    </div>
  </section>

  <!-- Donate Section -->
  <section class="content-section">
    <div class="container">
      <div class="donate-content">
        <div class="donate-text">
          <h2>Make a Difference Today</h2>
          <p>
            Every donation, no matter the size, creates ripples of positive change. Your support
            directly funds the development of open-source digital tools, educational programs, and
            community mobilization efforts that protect our cherished Bay shoreline.
          </p>
          <p>
            Bay Tides is a registered 501(c)(3) nonprofit organization (EIN: 93-3889081). All
            donations are tax-deductible to the fullest extent allowed by law.
          </p>

          <div class="donate-button-wrapper" id="donation-form">
            <a href="/checkout" class="btn btn-primary btn-large">
              Donate Now
              <svg
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                style="vertical-align: middle; margin-left: 0.5rem"
              >
                <path d="M5 12h14M12 5l7 7-7 7"></path>
              </svg>
            </a>
            <p style="margin-top: 1rem; font-size: 0.875rem; color: var(--text-light)">
              Secure checkout powered by Stripe
            </p>
          </div>

          <div class="manage-donations" style="margin-top: 2rem">
            <p>
              Already a recurring donor?
              <a
                href="https://billing.stripe.com/p/login/5kQdR2f6pbC6eXu3GB6oo00"
                target="_blank"
                rel="noopener"
              >
                Manage your donations
              </a>
            </p>
          </div>
        </div>

        <div class="donate-image">
          <picture>
            <source srcset="/assets/images/egret.webp" type="image/webp" />
            <img
              src="/assets/images/egret.jpg"
              alt="Wildlife at San Francisco Bay"
              width="600"
              height="400"
              loading="lazy"
            />
          </picture>
        </div>
      </div>
    </div>
  </section>

  <!-- Impact Section -->
  <section class="pillars alt-bg">
    <div class="container">
      <div class="section-title">
        <h2>Your Impact</h2>
        <p>See how your donation makes a difference</p>
      </div>

      <div class="cards-grid">
        <Card
          title="Digital Tools"
          icon="<svg xmlns='http://www.w3.org/2000/svg' width='28' height='28' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'><polyline points='16 18 22 12 16 6'/><polyline points='8 6 2 12 8 18'/></svg>"
        >
          <p>
            Fund development of open-source tools like Bay Navigator that connect residents with
            resources for sustainable living and community support.
          </p>
        </Card>

        <Card
          title="Education Programs"
          icon="<svg xmlns='http://www.w3.org/2000/svg' width='28' height='28' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'><path d='M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z'/><path d='M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z'/></svg>"
        >
          <p>
            Support workshops, community partnerships, and public programs that teach environmental
            awareness and empower residents to take action.
          </p>
        </Card>

        <Card
          title="Community Mobilization"
          icon="<svg xmlns='http://www.w3.org/2000/svg' width='28' height='28' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'><path d='M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2'/><circle cx='9' cy='7' r='4'/><path d='M23 21v-2a4 4 0 0 0-3-3.87'/><path d='M16 3.13a4 4 0 0 1 0 7.75'/></svg>"
        >
          <p>
            Enable our work connecting volunteers with meaningful opportunities to protect the Bay
            through technology and direct action.
          </p>
        </Card>
      </div>
    </div>
  </section>

  <!-- Other Ways to Give -->
  <section class="content-section ways-to-give-section">
    <div class="container">
      <div class="section-title">
        <h2>Other Ways to Give</h2>
        <p>Explore additional options to maximize your impact</p>
      </div>

      <div class="ways-to-give-grid">
        <div class="way-to-give-card way-to-give-card-blue">
          <div class="way-to-give-icon">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="28"
              height="28"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <rect x="1" y="4" width="22" height="16" rx="2" ry="2"></rect>
              <line x1="1" y1="10" x2="23" y2="10"></line>
            </svg>
          </div>
          <h3>Corporate Matching</h3>
          <p>
            Many employers match charitable contributions. Check if your company offers a matching
            gift program to double your impact.
          </p>
          <a href="/donate/matching" class="btn btn-outline">Learn More</a>
        </div>

        <div class="way-to-give-card way-to-give-card-teal">
          <div class="way-to-give-icon">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="28"
              height="28"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path
                d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"
              >
              </path>
              <polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline>
              <line x1="12" y1="22.08" x2="12" y2="12"></line>
            </svg>
          </div>
          <h3>Donor Advised Funds</h3>
          <p>
            Recommend a grant from your DAF to Bay Tides. Our EIN is available for easy processing
            through your fund administrator.
          </p>
          <a href="/donate/daf" class="btn btn-outline">Learn More</a>
        </div>

        <div class="way-to-give-card way-to-give-card-green">
          <div class="way-to-give-icon">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="28"
              height="28"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <polyline points="23 6 13.5 15.5 8.5 10.5 1 18"></polyline>
              <polyline points="17 6 23 6 23 12"></polyline>
            </svg>
          </div>
          <h3>Stock Donations</h3>
          <p>
            Donating appreciated securities can provide significant tax advantages while supporting
            our conservation mission.
          </p>
          <a href="/donate/stocks" class="btn btn-outline">Learn More</a>
        </div>

        <div class="way-to-give-card way-to-give-card-purple">
          <div class="way-to-give-icon">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="28"
              height="28"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
              <circle cx="12" cy="7" r="4"></circle>
            </svg>
          </div>
          <h3>In-Kind Donations</h3>
          <p>
            We accept donations of supplies, equipment, and professional services. Contact us to
            learn about current needs.
          </p>
          <a href="/donate/in-kind" class="btn btn-outline">Learn More</a>
        </div>

        <div class="way-to-give-card way-to-give-card-amber">
          <div class="way-to-give-icon">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="28"
              height="28"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <line x1="12" y1="1" x2="12" y2="23"></line>
              <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
            </svg>
          </div>
          <h3>IRA Charitable Rollover</h3>
          <p>
            If you're 70Â½ or older, donate directly from your IRA tax-free while satisfying your
            required minimum distribution.
          </p>
          <a href="/donate/ira" class="btn btn-outline">Learn More</a>
        </div>

        <div class="way-to-give-card way-to-give-card-rose">
          <div class="way-to-give-icon">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="28"
              height="28"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
              <polyline points="14 2 14 8 20 8"></polyline>
              <line x1="16" y1="13" x2="8" y2="13"></line>
              <line x1="16" y1="17" x2="8" y2="17"></line>
            </svg>
          </div>
          <h3>Planned Giving</h3>
          <p>
            Leave a lasting legacy by including Bay Tides in your will, trust, or estate plans for
            future generations.
          </p>
          <a href="/donate/planned-giving" class="btn btn-outline">Learn More</a>
        </div>
      </div>

      <div class="ways-to-give-help">
        <p>
          Have questions about the best way to give?
          <a href="/contact" class="btn btn-secondary">Contact Us</a>
        </p>
      </div>
    </div>
  </section>

  <!-- Corporate & Technology Partners -->
  <section class="partners-section">
    <div class="container">
      <div class="section-title">
        <h2>Corporate & Technology Partners</h2>
        <p>Partner with us or see the companies supporting our mission</p>
      </div>

      <div class="partners-grid">
        <div class="partner-card partner-card-corporate">
          <div class="partner-card-icon">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="32"
              height="32"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="M12 2L2 7l10 5 10-5-10-5z"></path>
              <path d="M2 17l10 5 10-5"></path>
              <path d="M2 12l10 5 10-5"></path>
            </svg>
          </div>
          <h3>Corporate Partnerships</h3>
          <p>
            Partner with Bay Tides for sponsorships, employee volunteer events, and corporate giving
            programs that align with your values.
          </p>
          <a href="/donate/corporate" class="btn btn-primary">Partner With Us</a>
        </div>

        <div class="partner-card partner-card-sponsors">
          <h3>Technology Sponsors</h3>
          <p>We're grateful to these companies for donating software and services</p>
          <div class="sponsors-logos-inline">
            <img
              src="/assets/images/sponsors/microsoft.svg"
              alt="Microsoft"
              width="40"
              height="40"
            />
            <img src="/assets/images/sponsors/github.svg" alt="GitHub" width="40" height="40" />
            <img
              src="/assets/images/sponsors/salesforce.svg"
              alt="Salesforce"
              width="40"
              height="40"
            />
            <img src="/assets/images/sponsors/google.svg" alt="Google" width="40" height="40" />
            <img
              src="/assets/images/sponsors/cloudflare.svg"
              alt="Cloudflare"
              width="40"
              height="40"
            />
            <img src="/assets/images/sponsors/canva.svg" alt="Canva" width="40" height="40" />
            <img src="/assets/images/sponsors/sentry.svg" alt="Sentry" width="40" height="40" />
            <img src="/assets/images/sponsors/flickr.svg" alt="Flickr" width="40" height="40" />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Thank You -->
  <section class="impact">
    <div class="container">
      <div class="impact-content">
        <h2>Thank You</h2>
        <p>
          Your generosity makes our work possible. Together, we can ensure a thriving, resilient Bay
          Area for generations to come.
        </p>
        <a href="#donation-form" class="btn btn-primary">Donate Now</a>
      </div>
    </div>
  </section>
</BaseLayout>
