  function initPartnershipFinder() {
    const finder = document.querySelector('.partnership-finder');
    if (!finder) return;

    const quizData: QuizData = {};
    let currentStep = 0;
    const totalSteps = 8;
    let selectedGoals: string[] = [];

    // Check for submission success
    const params = new URLSearchParams(window.location.search);
    if (params.get('submitted') === 'true') {
      showStep('success');
      window.history.replaceState({}, '', window.location.pathname);
    }

    function updateProgress(step: number) {
      const progressBar = document.getElementById('progress-bar');
      const progressText = document.getElementById('progress-text');
      const progressContainer = finder.querySelector('.finder-progress');

      if (progressBar && progressText && progressContainer) {
        const percent = (step / totalSteps) * 100;
        progressBar.style.width = `${percent}%`;
        progressText.textContent = `Step ${step} of ${totalSteps}`;
        progressContainer.setAttribute('aria-valuenow', String(percent));
      }
    }

    function showStep(step: number | string) {
      const allSteps = finder.querySelectorAll('.finder-step');
      allSteps.forEach((s) => {
        (s as HTMLElement).hidden = true;
        s.classList.remove('active');
      });

      const targetStep = finder.querySelector(`[data-step="${step}"]`) as HTMLElement;
      if (targetStep) {
        targetStep.hidden = false;
        targetStep.classList.add('active');

        // Focus management for accessibility
        const heading = targetStep.querySelector('legend, h4, .step-label');
        if (heading) {
          (heading as HTMLElement).tabIndex = -1;
          (heading as HTMLElement).focus();
        }
      }

      if (typeof step === 'number') {
        currentStep = step;
        updateProgress(step);
      }
    }

    function collectFieldData() {
      // Collect text inputs
      finder
        .querySelectorAll(
          'input[type="text"], input[type="email"], input[type="tel"], input[type="url"], textarea, select'
        )
        .forEach((el) => {
          const input = el as HTMLInputElement | HTMLTextAreaElement | HTMLSelectElement;
          const field = input.dataset.field;
          if (field && input.value) {
            (quizData as Record<string, unknown>)[field] = input.value;
          }
        });

      // Collect radio buttons
      finder.querySelectorAll('input[type="radio"]:checked').forEach((el) => {
        const input = el as HTMLInputElement;
        const field = input.dataset.field;
        if (field) {
          (quizData as Record<string, unknown>)[field] = input.value;
        }
      });

      // Collect checkboxes
      const checkboxFields: Record<string, string[]> = {};
      finder.querySelectorAll('input[type="checkbox"]:checked').forEach((el) => {
        const input = el as HTMLInputElement;
        const field = input.dataset.field;
        if (field && input.value) {
          if (!checkboxFields[field]) checkboxFields[field] = [];
          checkboxFields[field].push(input.value);
        }
      });
      Object.keys(checkboxFields).forEach((field) => {
        (quizData as Record<string, unknown>)[field] = checkboxFields[field];
      });

      // Goals ranking
      if (selectedGoals.length > 0) {
        quizData.goals = selectedGoals;
      }
    }

    function validateStep(step: number): boolean {
      const stepEl = finder.querySelector(`[data-step="${step}"]`);
      if (!stepEl) return true;

      let isValid = true;

      // Check required text inputs
      stepEl
        .querySelectorAll('input[required], textarea[required], select[required]')
        .forEach((el) => {
          const input = el as HTMLInputElement;
          if (!input.value.trim()) {
            isValid = false;
            input.classList.add('error');
            input.setAttribute('aria-invalid', 'true');
          } else {
            input.classList.remove('error');
            input.removeAttribute('aria-invalid');
          }
        });

      // Check required radio groups
      if (step === 1) {
        const companySize = stepEl.querySelector('input[name="company-size"]:checked');
        const locations = stepEl.querySelectorAll('input[data-field="locations"]:checked');
        if (!companySize || locations.length === 0) isValid = false;
      }

      if (step === 2) {
        if (selectedGoals.length < 1) isValid = false;
      }

      if (step === 3) {
        if (!quizData.involvement) isValid = false;
      }

      if (step === 4) {
        const matching = stepEl.querySelector('input[name="matching"]:checked');
        const programs = stepEl.querySelectorAll('input[data-field="programs"]:checked');
        if (!matching || programs.length === 0) isValid = false;
      }

      return isValid;
    }

    function getRecommendedTier(): string {
      const budget = quizData.budget;

      if (budget === '50k-plus') return 'legacy-partner';
      if (budget === '15k-50k') return 'shoreline-champion';
      if (budget === '5k-15k') return 'bay-steward';
      return 'bay-friend';
    }

    function formatValue(value: string | undefined): string {
      if (!value) return 'Not provided';
      return value
        .split('-')
        .map((word) => word.charAt(0).toUpperCase() + word.slice(1))
        .join(' ');
    }

    function formatBudget(budget: string): string {
      const budgetMap: Record<string, string> = {
        'under-5k': 'Under $5,000',
        '5k-15k': '$5,000 – $15,000',
        '15k-50k': '$15,000 – $50,000',
        '50k-plus': '$50,000+',
        'not-sure': 'Not sure yet',
      };
      return budgetMap[budget] || budget;
    }

    function renderResults() {
      const tierKey = getRecommendedTier();
      const tier = tierData[tierKey];

      // Update tier display using safe DOM methods
      const tierBadge = document.getElementById('result-tier-badge');
      const tierName = document.getElementById('result-tier-name');
      const tierDesc = document.getElementById('result-tier-description');
      const impactText = document.getElementById('result-impact-text');
      const benefitsList = document.getElementById('result-benefits-list');

      if (tierBadge) {
        // Clear and insert SVG icon safely
        tierBadge.textContent = '';
        const tempDiv = document.createElement('div');
        tempDiv.innerHTML = tier.icon;
        const svg = tempDiv.firstChild;
        if (svg) tierBadge.appendChild(svg);
      }
      if (tierName) tierName.textContent = `${tier.name} (${tier.range})`;
      if (tierDesc) tierDesc.textContent = tier.description;
      if (impactText) impactText.textContent = tier.impact;

      if (benefitsList) {
        benefitsList.textContent = '';
        tier.benefits.forEach((benefit) => {
          const li = document.createElement('li');
          li.textContent = benefit;
          benefitsList.appendChild(li);
        });
      }

      // Render response summary using safe DOM methods
      const summaryContainer = document.getElementById('summary-sections');
      if (summaryContainer) {
        summaryContainer.textContent = '';
        renderSummary(summaryContainer);
      }
    }

    function createSummarySection(
      container: HTMLElement,
      title: string,
      editStep: number,
      items: Array<{ label: string; value: string }>
    ) {
      const section = document.createElement('div');
      section.className = 'summary-section';

      const header = document.createElement('div');
      header.className = 'summary-section-header';

      const h6 = document.createElement('h6');
      h6.textContent = title;
      header.appendChild(h6);

      const editBtn = document.createElement('button');
      editBtn.type = 'button';
      editBtn.className = 'edit-btn';
      editBtn.textContent = 'Edit';
      editBtn.dataset.editStep = String(editStep);
      editBtn.addEventListener('click', () => showStep(editStep));
      header.appendChild(editBtn);

      section.appendChild(header);

      const dl = document.createElement('dl');
      items.forEach((item) => {
        const dt = document.createElement('dt');
        dt.textContent = item.label;
        dl.appendChild(dt);

        const dd = document.createElement('dd');
        dd.textContent = item.value;
        dl.appendChild(dd);
      });
      section.appendChild(dl);

      container.appendChild(section);
    }

    function renderSummary(container: HTMLElement) {
      // Company Profile
      if (quizData.companyName) {
        createSummarySection(container, 'Company Profile', 1, [
          { label: 'Company', value: quizData.companyName },
          { label: 'Industry', value: formatValue(quizData.industry) },
          { label: 'Size', value: `${quizData.companySize} employees` },
          { label: 'Locations', value: (quizData.locations || []).map(formatValue).join(', ') },
        ]);
      }

      // Goals & Motivations
      if (quizData.goals && quizData.goals.length > 0) {
        createSummarySection(container, 'Goals & Motivations', 2, [
          {
            label: 'Top Goals',
            value: quizData.goals.map((g, i) => `${i + 1}. ${formatValue(g)}`).join(', '),
          },
          { label: 'Success Definition', value: quizData.successDefinition || 'Not provided' },
        ]);
      }

      // Involvement
      if (quizData.involvement) {
        const involvementItems: Array<{ label: string; value: string }> = [
          { label: 'Type', value: formatValue(quizData.involvement) },
        ];

        if (quizData.budget) {
          involvementItems.push({ label: 'Budget', value: formatBudget(quizData.budget) });
        }
        if (quizData.teamSize) {
          involvementItems.push({ label: 'Team Size', value: formatValue(quizData.teamSize) });
        }
        if (quizData.frequency) {
          involvementItems.push({ label: 'Frequency', value: formatValue(quizData.frequency) });
        }
        if (quizData.inKindTypes && quizData.inKindTypes.length > 0) {
          involvementItems.push({
            label: 'In-Kind',
            value: quizData.inKindTypes.map(formatValue).join(', '),
          });
        }

        createSummarySection(container, 'Involvement', 3, involvementItems);
      }

      // Programs & Matching
      if (quizData.programs && quizData.programs.length > 0) {
        const matchingValue = quizData.matchingDetails
          ? `${formatValue(quizData.matchingGift)} — ${quizData.matchingDetails}`
          : formatValue(quizData.matchingGift);

        createSummarySection(container, 'Programs & Matching', 4, [
          { label: 'Matching Gift', value: matchingValue },
          { label: 'Interested Programs', value: quizData.programs.map(formatValue).join(', ') },
        ]);
      }
    }

    // Event Handlers

    // Role selection (Step 0)
    finder.querySelectorAll('[data-step="0"] .option-btn').forEach((btn) => {
      btn.addEventListener('click', () => {
        const value = (btn as HTMLElement).dataset.value;

        // Update selection state
        finder.querySelectorAll('[data-step="0"] .option-btn').forEach((b) => {
          b.classList.remove('selected');
          b.setAttribute('aria-checked', 'false');
        });
        btn.classList.add('selected');
        btn.setAttribute('aria-checked', 'true');

        quizData.role = value;

        // Show researcher note if applicable
        const researcherNote = document.getElementById('researcher-note');
        if (researcherNote) {
          researcherNote.hidden = value !== 'researching';
        }

        // Handle browsing exit
        if (value === 'browsing') {
          setTimeout(() => showStep('browsing'), 300);
        } else {
          setTimeout(() => showStep(1), 300);
        }
      });
    });

    // Involvement selection (Step 3)
    finder.querySelectorAll('.involvement-options .option-btn').forEach((btn) => {
      btn.addEventListener('click', () => {
        const value = (btn as HTMLElement).dataset.value;

        finder.querySelectorAll('.involvement-options .option-btn').forEach((b) => {
          b.classList.remove('selected');
          b.setAttribute('aria-checked', 'false');
        });
        btn.classList.add('selected');
        btn.setAttribute('aria-checked', 'true');

        quizData.involvement = value;

        // Show/hide conditional fields
        const financialFields = document.getElementById('financial-fields');
        const handsOnFields = document.getElementById('hands-on-fields');
        const inKindFields = document.getElementById('in-kind-fields');

        if (financialFields) {
          financialFields.hidden = !(value === 'financial' || value === 'hybrid');
        }
        if (handsOnFields) {
          handsOnFields.hidden = !(value === 'hands-on' || value === 'hybrid');
        }
        if (inKindFields) {
          inKindFields.hidden = !(value === 'in-kind' || value === 'hybrid');
        }
      });
    });

    // Goals ranking (Step 2)
    finder.querySelectorAll('.ranking-option').forEach((btn) => {
      btn.addEventListener('click', () => {
        const value = (btn as HTMLElement).dataset.value;
        if (!value) return;

        const badge = btn.querySelector('.rank-badge');

        if (btn.classList.contains('selected')) {
          // Deselect
          btn.classList.remove('selected');
          btn.setAttribute('aria-selected', 'false');
          const index = selectedGoals.indexOf(value);
          if (index > -1) selectedGoals.splice(index, 1);
          if (badge) badge.textContent = '';

          // Re-number remaining
          selectedGoals.forEach((goal, i) => {
            const goalBtn = finder.querySelector(`.ranking-option[data-value="${goal}"]`);
            const goalBadge = goalBtn?.querySelector('.rank-badge');
            if (goalBadge) goalBadge.textContent = String(i + 1);
          });
        } else if (selectedGoals.length < 3) {
          // Select
          btn.classList.add('selected');
          btn.setAttribute('aria-selected', 'true');
          selectedGoals.push(value);
          if (badge) badge.textContent = String(selectedGoals.length);
        }
      });
    });

    // Matching gift details toggle
    finder.querySelectorAll('input[name="matching"]').forEach((radio) => {
      radio.addEventListener('change', () => {
        const matchingDetails = document.getElementById('matching-details');
        if (matchingDetails) {
          matchingDetails.hidden = (radio as HTMLInputElement).value !== 'yes';
        }
      });
    });

    // CSR details toggle
    finder.querySelectorAll('input[name="csr"]').forEach((radio) => {
      radio.addEventListener('change', () => {
        const csrDetails = document.getElementById('csr-details');
        const value = (radio as HTMLInputElement).value;
        if (csrDetails) {
          csrDetails.hidden = !(value === 'yes' || value === 'in-development');
        }
      });
    });

    // Navigation buttons
    finder.querySelectorAll('.btn-next').forEach((btn) => {
      btn.addEventListener('click', () => {
        collectFieldData();

        if (!validateStep(currentStep)) {
          // Create accessible error message
          const errorDiv = document.createElement('div');
          errorDiv.setAttribute('role', 'alert');
          errorDiv.className = 'validation-error';
          errorDiv.textContent = 'Please fill in all required fields before continuing.';

          const existingError = finder.querySelector('.validation-error');
