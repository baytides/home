---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';

const structuredData = [
  {
    '@context': 'https://schema.org',
    '@type': 'WebPage',
    name: 'Corporate Partnerships & Sponsorships',
    description:
      "Partner with Bay Tides to demonstrate your company's commitment to environmental stewardship and community impact.",
    url: 'https://baytides.org/donate/corporate',
  },
  {
    '@context': 'https://schema.org',
    '@type': 'BreadcrumbList',
    itemListElement: [
      { '@type': 'ListItem', position: 1, name: 'Home', item: 'https://baytides.org/' },
      { '@type': 'ListItem', position: 2, name: 'Donate', item: 'https://baytides.org/donate' },
      { '@type': 'ListItem', position: 3, name: 'Corporate Partnerships' },
    ],
  },
];
---

<BaseLayout
  title="Corporate Partnerships & Sponsorships"
  description="Partner with Bay Tides to support Bay Area environmental conservation. Explore sponsorship opportunities, employee engagement programs, and corporate giving options."
  canonicalUrl="https://baytides.org/donate/corporate"
  structuredData={structuredData}
>
  <Fragment slot="head">
    <link rel="preconnect" href="https://challenges.cloudflare.com" crossorigin />
    <script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>
  </Fragment>

  <Breadcrumb
    items={[
      { label: 'Home', href: '/' },
      { label: 'Donate', href: '/donate' },
      { label: 'Corporate Partnerships' },
    ]}
  />

  <section class="hero hero-page corporate-video-hero">
    <video
      class="corporate-hero-video"
      autoplay
      muted
      loop
      playsinline
      poster="/assets/video/corporate-hero-poster.webp"
    >
      <source src="/assets/video/corporate-hero.webm" type="video/webm" />
    </video>
    <div class="corporate-hero-overlay"></div>
    <div class="container">
      <h1>Corporate Partnerships</h1>
      <p>Align your brand with environmental stewardship</p>
    </div>
  </section>

  <section class="content-section">
    <div class="container">
      <div class="corporate-content">
        <div class="corporate-intro">
          <h2>Partner With Us</h2>
          <p>
            Bay Tides partners with businesses of all sizes to protect and restore the San Francisco
            Bay. A corporate partnership demonstrates your commitment to environmental
            sustainability, engages employees, and strengthens your connection to the Bay Area
            community.
          </p>
        </div>

        <!-- Partnership Finder Tool -->
        <div class="partnership-finder" role="region" aria-labelledby="finder-heading">
          <div class="finder-header">
            <div class="finder-icon" aria-hidden="true">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="28"
                height="28"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <circle cx="12" cy="12" r="10"></circle>
                <polygon points="16.24 7.76 14.12 14.12 7.76 16.24 9.88 9.88 16.24 7.76"></polygon>
              </svg>
            </div>
            <div>
              <h3 id="finder-heading">Partnership Finder</h3>
              <p>
                We'd love to learn about your organization and what you're hoping to achieve through
                a partnership. There are no right or wrong answers—the more you share, the better we
                can understand if we're a good fit and how we might collaborate meaningfully for a
                greater Bay Area.
              </p>
            </div>
          </div>

          <div class="finder-content">
            <!-- Progress Bar -->
            <div
              class="finder-progress"
              role="progressbar"
              aria-valuenow="0"
              aria-valuemin="0"
              aria-valuemax="100"
              aria-label="Quiz progress"
            >
              <div class="progress-track">
                <div class="progress-bar" id="progress-bar"></div>
              </div>
              <span class="progress-text" id="progress-text" aria-live="polite">Step 1 of 8</span>
            </div>

            <!-- Step 0: Role Gate -->
            <fieldset class="finder-step active" data-step="0">
              <legend class="step-label">Before we begin, please tell us about your role:</legend>
              <div class="step-options" role="radiogroup" aria-required="true">
                <button
                  class="option-btn"
                  data-field="role"
                  data-value="decision-maker"
                  role="radio"
                  aria-checked="false"
                  type="button"
                >
                  <span class="option-icon" aria-hidden="true">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="24"
                      height="24"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path><circle
                        cx="9"
                        cy="7"
                        r="4"
                      >
                      </circle><path d="M22 21v-2a4 4 0 0 0-3-3.87"></path><path
                        d="M16 3.13a4 4 0 0 1 0 7.75"
                      >
                      </path>
                    </svg>
                  </span>
                  <span class="option-text">
                    <strong>I'm a decision-maker</strong>
                    <span>for partnerships/sponsorships</span>
                  </span>
                </button>
                <button
                  class="option-btn"
                  data-field="role"
                  data-value="authorized"
                  role="radio"
                  aria-checked="false"
                  type="button"
                >
                  <span class="option-icon" aria-hidden="true">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="24"
                      height="24"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path><path
                        d="m9 12 2 2 4-4"
                      >
                      </path>
                    </svg>
                  </span>
                  <span class="option-text">
                    <strong>I have authorization</strong>
                    <span>to explore partnership options</span>
                  </span>
                </button>
                <button
                  class="option-btn"
                  data-field="role"
                  data-value="researching"
                  role="radio"
                  aria-checked="false"
                  type="button"
                >
                  <span class="option-icon" aria-hidden="true">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="24"
                      height="24"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <circle cx="11" cy="11" r="8"></circle><path d="m21 21-4.3-4.3"></path>
                    </svg>
                  </span>
                  <span class="option-text">
                    <strong>I'm researching</strong>
                    <span>on behalf of my company</span>
                  </span>
                </button>
                <button
                  class="option-btn"
                  data-field="role"
                  data-value="browsing"
                  role="radio"
                  aria-checked="false"
                  type="button"
                >
                  <span class="option-icon" aria-hidden="true">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="24"
                      height="24"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <path d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7Z"></path><circle
                        cx="12"
                        cy="12"
                        r="3"
                      >
                      </circle>
                    </svg>
                  </span>
                  <span class="option-text">
                    <strong>Just browsing</strong>
                    <span>for personal interest</span>
                  </span>
                </button>
              </div>
              <div class="researcher-note" id="researcher-note" hidden>
                <p>
                  <strong>Note:</strong> We recommend looping in a decision-maker before submitting an
                  inquiry so we can have a productive conversation. You're welcome to continue and share
                  the results with your team.
                </p>
              </div>
            </fieldset>

            <!-- Browsing Exit Screen -->
            <div class="finder-step browsing-exit" data-step="browsing" hidden>
              <div class="exit-message">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="48"
                  height="48"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  aria-hidden="true"
                >
                  <circle cx="12" cy="12" r="10"></circle><path d="M12 16v-4"></path><path
                    d="M12 8h.01"
                  >
                  </path>
                </svg>
                <h4>Thanks for your interest!</h4>
                <p>
                  This tool is designed for companies actively exploring partnerships. Feel free to
                  look around our site to learn more about Bay Tides, or contact us with any
                  questions.
                </p>
                <div class="exit-actions">
                  <a href="/contact" class="btn btn-primary">Contact Us</a>
                  <a href="/about" class="btn btn-secondary">Learn About Us</a>
                </div>
              </div>
            </div>

            <!-- Step 1: Company Profile -->
            <fieldset class="finder-step" data-step="1" hidden>
              <legend class="step-label">Tell us about your organization:</legend>
              <div class="form-fields">
                <div class="form-group">
                  <label for="company-name">
                    Company/Organization Name
                    <span class="required" aria-hidden="true">*</span>
                    <span class="sr-only">(required)</span>
                  </label>
                  <input
                    type="text"
                    id="company-name"
                    data-field="companyName"
                    required
                    autocomplete="organization"
                    aria-describedby="company-name-hint"
                  />
                  <span id="company-name-hint" class="field-hint">
                    Enter your company's legal or common name
                  </span>
                </div>
                <div class="form-group">
                  <label for="industry">
                    Industry
                    <span class="required" aria-hidden="true">*</span>
                    <span class="sr-only">(required)</span>
                  </label>
                  <select id="industry" data-field="industry" required>
                    <option value="">Select an industry...</option>
                    <option value="technology">Technology</option>
                    <option value="finance">Finance</option>
                    <option value="healthcare">Healthcare</option>
                    <option value="retail">Retail</option>
                    <option value="manufacturing">Manufacturing</option>
                    <option value="professional-services">Professional Services</option>
                    <option value="nonprofit">Nonprofit</option>
                    <option value="education">Education</option>
                    <option value="other">Other</option>
                  </select>
                </div>
                <div class="form-group">
                  <label id="company-size-label">
                    Company Size
                    <span class="required" aria-hidden="true">*</span>
                    <span class="sr-only">(required)</span>
                  </label>
                  <div
                    class="radio-group"
                    role="radiogroup"
                    aria-labelledby="company-size-label"
                    aria-required="true"
                  >
                    <label class="radio-option">
                      <input
                        type="radio"
                        name="company-size"
                        data-field="companySize"
                        value="1-50"
                      />
                      <span>1–50 employees</span>
                    </label>
                    <label class="radio-option">
                      <input
                        type="radio"
                        name="company-size"
                        data-field="companySize"
                        value="51-200"
                      />
                      <span>51–200 employees</span>
                    </label>
                    <label class="radio-option">
                      <input
                        type="radio"
                        name="company-size"
                        data-field="companySize"
                        value="201-1000"
                      />
                      <span>201–1,000 employees</span>
                    </label>
                    <label class="radio-option">
                      <input
                        type="radio"
                        name="company-size"
                        data-field="companySize"
                        value="1000+"
                      />
                      <span>1,000+ employees</span>
                    </label>
                  </div>
                </div>
                <div class="form-group">
                  <label id="locations-label">
                    Bay Area Office Locations
                    <span class="required" aria-hidden="true">*</span>
                    <span class="sr-only">(required, select at least one)</span>
                  </label>
                  <div class="checkbox-group" role="group" aria-labelledby="locations-label">
                    <label class="checkbox-option">
                      <input type="checkbox" data-field="locations" value="san-francisco" />
                      <span>San Francisco</span>
                    </label>
                    <label class="checkbox-option">
                      <input type="checkbox" data-field="locations" value="oakland-east-bay" />
                      <span>Oakland / East Bay</span>
                    </label>
                    <label class="checkbox-option">
                      <input type="checkbox" data-field="locations" value="san-jose-south-bay" />
                      <span>San Jose / South Bay</span>
                    </label>
                    <label class="checkbox-option">
                      <input type="checkbox" data-field="locations" value="peninsula" />
                      <span>Peninsula</span>
                    </label>
                    <label class="checkbox-option">
                      <input type="checkbox" data-field="locations" value="north-bay" />
                      <span>North Bay</span>
                    </label>
                    <label class="checkbox-option">
                      <input type="checkbox" data-field="locations" value="remote" />
                      <span>Remote / No local office</span>
                    </label>
                  </div>
                </div>
              </div>
              <div class="step-nav">
                <button class="btn btn-secondary btn-back" type="button">Back</button>
                <button class="btn btn-primary btn-next" type="button">Continue</button>
              </div>
            </fieldset>

            <!-- Step 2: Goals & Motivations -->
            <fieldset class="finder-step" data-step="2" hidden>
              <legend class="step-label">What are your partnership goals?</legend>
              <div class="form-fields">
                <div class="form-group">
                  <label id="goals-label">
                    Select your top 3 partnership goals
                    <span class="required" aria-hidden="true">*</span>
                    <span class="sr-only">(required)</span>
                  </label>
                  <p class="field-hint" id="goals-hint">
                    Click to select up to 3 options in order of priority
                  </p>
                  <div
                    class="ranking-group"
                    role="listbox"
                    aria-labelledby="goals-label"
                    aria-describedby="goals-hint"
                    aria-multiselectable="true"
                  >
                    <button
                      type="button"
                      class="ranking-option"
                      data-field="goals"
                      data-value="employee-engagement"
                      role="option"
                      aria-selected="false"
                    >
                      <span class="rank-badge" aria-hidden="true"></span>
                      <span>Employee engagement</span>
                    </button>
                    <button
                      type="button"
                      class="ranking-option"
                      data-field="goals"
                      data-value="brand-visibility"
                      role="option"
                      aria-selected="false"
                    >
                      <span class="rank-badge" aria-hidden="true"></span>
                      <span>Brand visibility</span>
                    </button>
                    <button
                      type="button"
                      class="ranking-option"
                      data-field="goals"
                      data-value="community-impact"
                      role="option"
                      aria-selected="false"
                    >
                      <span class="rank-badge" aria-hidden="true"></span>
                      <span>Community impact</span>
                    </button>
                    <button
                      type="button"
                      class="ranking-option"
                      data-field="goals"
                      data-value="esg-reporting"
                      role="option"
                      aria-selected="false"
                    >
                      <span class="rank-badge" aria-hidden="true"></span>
                      <span>ESG / Sustainability reporting</span>
                    </button>
                    <button
                      type="button"
                      class="ranking-option"
                      data-field="goals"
                      data-value="team-building"
                      role="option"
                      aria-selected="false"
                    >
                      <span class="rank-badge" aria-hidden="true"></span>
                      <span>Team building</span>
                    </button>
                    <button
                      type="button"
                      class="ranking-option"
                      data-field="goals"
                      data-value="cause-marketing"
                      role="option"
                      aria-selected="false"
                    >
                      <span class="rank-badge" aria-hidden="true"></span>
                      <span>Customer-facing cause marketing</span>
                    </button>
                    <button
                      type="button"
                      class="ranking-option"
                      data-field="goals"
                      data-value="local-environment"
                      role="option"
                      aria-selected="false"
                    >
                      <span class="rank-badge" aria-hidden="true"></span>
                      <span>Supporting local environment</span>
                    </button>
                  </div>
                </div>
                <div class="form-group">
                  <label for="success-definition">
                    What does success look like for your organization?
                    <span class="required" aria-hidden="true">*</span>
                    <span class="sr-only">(required)</span>
                  </label>
                  <textarea
                    id="success-definition"
                    data-field="successDefinition"
                    rows="3"
                    placeholder="Help us understand what a successful partnership means to you..."
                    required
                    aria-describedby="success-hint"
                  >
                  </textarea>
                  <span id="success-hint" class="field-hint">
                    This helps us tailor our approach to meet your specific needs
                  </span>
                </div>
              </div>
              <div class="step-nav">
                <button class="btn btn-secondary btn-back" type="button">Back</button>
                <button class="btn btn-primary btn-next" type="button">Continue</button>
              </div>
            </fieldset>

            <!-- Step 3: Involvement Preferences -->
            <fieldset class="finder-step" data-step="3" hidden>
              <legend class="step-label">How would you like to be involved?</legend>
              <div class="form-fields">
                <div class="form-group">
                  <label id="involvement-label">
                    Preferred involvement level
                    <span class="required" aria-hidden="true">*</span>
                    <span class="sr-only">(required)</span>
                  </label>
                  <div
                    class="step-options involvement-options"
                    role="radiogroup"
                    aria-labelledby="involvement-label"
                    aria-required="true"
                  >
                    <button
                      class="option-btn"
                      data-field="involvement"
                      data-value="hands-on"
                      role="radio"
                      aria-checked="false"
                      type="button"
                    >
                      <span class="option-icon" aria-hidden="true">
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          width="24"
                          height="24"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="2"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                        >
                          <path d="M18 11V6a2 2 0 0 0-2-2v0a2 2 0 0 0-2 2v0"></path><path
                            d="M14 10V4a2 2 0 0 0-2-2v0a2 2 0 0 0-2 2v2"
                          >
                          </path><path d="M10 10.5V6a2 2 0 0 0-2-2v0a2 2 0 0 0-2 2v8"></path><path
                            d="M18 8a2 2 0 1 1 4 0v6a8 8 0 0 1-8 8h-2c-2.8 0-4.5-.86-5.99-2.34l-3.6-3.6a2 2 0 0 1 2.83-2.82L7 15"
                          >
                          </path>
                        </svg>
                      </span>
                      <span class="option-text">
                        <strong>Hands-on</strong>
                        <span>Volunteer events, active participation</span>
                      </span>
                    </button>
                    <button
                      class="option-btn"
                      data-field="involvement"
                      data-value="financial"
                      role="radio"
                      aria-checked="false"
                      type="button"
                    >
                      <span class="option-icon" aria-hidden="true">
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          width="24"
                          height="24"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="2"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                        >
                          <line x1="12" y1="1" x2="12" y2="23"></line><path
                            d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"
                          >
                          </path>
                        </svg>
                      </span>
                      <span class="option-text">
                        <strong>Financial</strong>
                        <span>Sponsorship, grants, donations</span>
                      </span>
                    </button>
                    <button
                      class="option-btn"
                      data-field="involvement"
                      data-value="in-kind"
                      role="radio"
                      aria-checked="false"
                      type="button"
                    >
                      <span class="option-icon" aria-hidden="true">
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          width="24"
                          height="24"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="2"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                        >
                          <path d="m7.5 4.27 9 5.15"></path><path
                            d="M21 8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16Z"
                          >
                          </path><path d="m3.3 7 8.7 5 8.7-5"></path><path d="M12 22V12"></path>
                        </svg>
                      </span>
                      <span class="option-text">
                        <strong>In-Kind</strong>
                        <span>Goods, services, expertise</span>
                      </span>
                    </button>
                    <button
                      class="option-btn"
                      data-field="involvement"
                      data-value="hybrid"
                      role="radio"
                      aria-checked="false"
                      type="button"
                    >
                      <span class="option-icon" aria-hidden="true">
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          width="24"
                          height="24"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="2"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                        >
                          <path d="M12 3a6 6 0 0 0 9 9 9 9 0 1 1-9-9Z"></path><path d="M19 3v4">
                          </path><path d="M21 5h-4"></path>
                        </svg>
                      </span>
                      <span class="option-text">
                        <strong>Hybrid</strong>
                        <span>Multiple types of involvement</span>
                      </span>
                    </button>
                  </div>
                </div>

                <!-- Conditional: Financial -->
                <div class="conditional-fields financial-fields" id="financial-fields" hidden>
                  <div class="form-group">
                    <label id="budget-label">Budget range</label>
                    <div class="radio-group" role="radiogroup" aria-labelledby="budget-label">
                      <label class="radio-option">
                        <input type="radio" name="budget" data-field="budget" value="under-5k" />
                        <span>Under $5,000</span>
                      </label>
                      <label class="radio-option">
                        <input type="radio" name="budget" data-field="budget" value="5k-15k" />
                        <span>$5,000 – $15,000</span>
                      </label>
                      <label class="radio-option">
                        <input type="radio" name="budget" data-field="budget" value="15k-50k" />
                        <span>$15,000 – $50,000</span>
                      </label>
                      <label class="radio-option">
                        <input type="radio" name="budget" data-field="budget" value="50k-plus" />
                        <span>$50,000+</span>
                      </label>
                      <label class="radio-option">
                        <input type="radio" name="budget" data-field="budget" value="not-sure" />
                        <span>Not sure yet</span>
                      </label>
                    </div>
                  </div>
                </div>

                <!-- Conditional: Hands-on -->
                <div class="conditional-fields hands-on-fields" id="hands-on-fields" hidden>
                  <div class="form-group">
                    <label id="team-size-label">Approximate team size for volunteer events</label>
                    <div class="radio-group" role="radiogroup" aria-labelledby="team-size-label">
                      <label class="radio-option">
                        <input
                          type="radio"
                          name="team-size"
                          data-field="teamSize"
                          value="under-10"
                        />
                        <span>Under 10</span>
                      </label>
                      <label class="radio-option">
                        <input type="radio" name="team-size" data-field="teamSize" value="10-25" />
                        <span>10–25</span>
                      </label>
                      <label class="radio-option">
                        <input type="radio" name="team-size" data-field="teamSize" value="25-50" />
                        <span>25–50</span>
                      </label>
                      <label class="radio-option">
                        <input
