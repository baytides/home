<script>
  document.addEventListener('DOMContentLoaded', () => {
    const copyBtn = document.querySelector('.copy-btn[data-copy="orginfo"]');

    if (copyBtn) {
      copyBtn.addEventListener('click', async () => {
        const orgInfo = `Bay Tides
EIN: 93-3889081
Address: 274 Redwood Shores Pkwy #619, Redwood City, CA 94065
Tax Status: 501(c)(3) Public Charity`;

        try {
          await navigator.clipboard.writeText(orgInfo);
          const span = copyBtn.querySelector('span');
          const originalText = span.textContent;
          span.textContent = 'Copied!';
          copyBtn.classList.add('copied');

          setTimeout(() => {
            span.textContent = originalText;
            copyBtn.classList.remove('copied');
          }, 2000);
        } catch (err) {
          console.error('Failed to copy:', err);
        }
      });
    }
  });
</script>
