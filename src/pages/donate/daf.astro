---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';

const structuredData = [
  {
    '@context': 'https://schema.org',
    '@type': 'WebPage',
    name: 'Donor Advised Fund Grants',
    description:
      'Make a grant from your Donor Advised Fund to support Bay Tides and protect the San Francisco Bay.',
    url: 'https://baytides.org/donate/daf',
  },
  {
    '@context': 'https://schema.org',
    '@type': 'BreadcrumbList',
    itemListElement: [
      { '@type': 'ListItem', position: 1, name: 'Home', item: 'https://baytides.org/' },
      { '@type': 'ListItem', position: 2, name: 'Donate', item: 'https://baytides.org/donate' },
      { '@type': 'ListItem', position: 3, name: 'Donor Advised Funds' },
    ],
  },
];
---

<BaseLayout
  title="Donor Advised Fund Grants"
  description="Recommend a grant from your Donor Advised Fund to Bay Tides. Learn how to support our mission through your DAF."
  canonicalUrl="https://baytides.org/donate/daf"
  structuredData={structuredData}
>
  <Breadcrumb
    items={[
      { label: 'Home', href: '/' },
      { label: 'Donate', href: '/donate' },
      { label: 'Donor Advised Funds' },
    ]}
  />

  <section class="hero hero-page">
    <div class="container">
      <h1>Donor Advised Funds</h1>
      <p>Recommend a grant from your DAF to support Bay conservation</p>
    </div>
  </section>

  <section class="content-section">
    <div class="container">
      <div class="daf-content">
        <div class="daf-intro">
          <h2>Give Through Your DAF</h2>
          <p>
            A Donor Advised Fund (DAF) is a charitable giving account that allows you to make a
            tax-deductible donation, grow your contributions tax-free, and recommend grants to
            qualified nonprofits like Bay Tides.
          </p>
        </div>

        <div class="daf-info-box">
          <h3>Organization Information</h3>
          <dl class="daf-details">
            <div class="daf-detail-row">
              <dt>Legal Name</dt>
              <dd>Bay Tides</dd>
            </div>
            <div class="daf-detail-row">
              <dt>EIN / Tax ID</dt>
              <dd>93-3889081</dd>
            </div>
            <div class="daf-detail-row">
              <dt>Address</dt>
              <dd>470 Olema Road, Fairfax, CA 94930</dd>
            </div>
            <div class="daf-detail-row">
              <dt>Tax Status</dt>
              <dd>501(c)(3) Public Charity</dd>
            </div>
          </dl>
        </div>

        <div class="daf-steps">
          <h3>How to Make a Grant</h3>
          <ol role="list">
            <li>
              <strong>Log in to your DAF account</strong> through your fund administrator (Fidelity Charitable,
              Schwab Charitable, Vanguard Charitable, or your community foundation).
            </li>
            <li>
              <strong>Search for Bay Tides</strong> using our name or EIN: 93-3889081.
            </li>
            <li>
              <strong>Recommend your grant amount</strong> and submit your request.
            </li>
            <li>
              <strong>Receive confirmation</strong> from both your fund administrator and Bay Tides.
            </li>
          </ol>
        </div>

        <div class="daf-benefits">
          <h3>Benefits of DAF Giving</h3>
          <ul>
            <li>
              <strong>Immediate tax deduction</strong> when you contribute to your DAF
            </li>
            <li>
              <strong>Tax-free growth</strong> of your charitable assets
            </li>
            <li>
              <strong>Flexible timing</strong> - give when it's right for you
            </li>
            <li>
              <strong>Simplified recordkeeping</strong> - one receipt for your contribution
            </li>
            <li>
              <strong>Legacy planning</strong> - name successors to continue your giving
            </li>
          </ul>
        </div>

        <div class="daf-help">
          <h3>Need Assistance?</h3>
          <p>
            If you need additional documentation or have questions about making a DAF grant to Bay
            Tides, please <a href="/contact">contact us</a>. We're happy to provide any information
            your fund administrator requires.
          </p>
        </div>

        <div class="daf-cta">
          <p>Don't have a DAF? You can still support our mission directly.</p>
          <a href="/checkout" class="btn btn-primary btn-large">Donate Now</a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .daf-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .daf-intro {
    margin-bottom: 3rem;
    text-align: center;
  }

  .daf-intro h2 {
    margin-bottom: 1.5rem;
  }

  .daf-intro p {
    font-size: 1.125rem;
    line-height: 1.8;
    color: var(--text-light);
  }

  .daf-info-box {
    background: var(--light-blue);
    border-radius: 12px;
    padding: 2rem;
    margin-bottom: 3rem;
  }

  .daf-info-box h3 {
    margin-bottom: 1.5rem;
    color: var(--primary-navy);
  }

  .daf-details {
    margin: 0;
  }

  .daf-detail-row {
    display: flex;
    justify-content: space-between;
    padding: 0.75rem 0;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  }

  .daf-detail-row:last-child {
    border-bottom: none;
  }

  .daf-detail-row dt {
    font-weight: 600;
    color: var(--text-dark);
  }

  .daf-detail-row dd {
    margin: 0;
    color: var(--text-light);
    text-align: right;
  }

  .daf-steps {
    margin-bottom: 3rem;
  }

  .daf-steps h3 {
    margin-bottom: 1.5rem;
    color: var(--primary-navy);
  }

  .daf-steps ol {
    list-style: none;
    counter-reset: steps;
    padding: 0;
  }

  .daf-steps li {
    counter-increment: steps;
    padding: 1rem 0 1rem 3.5rem;
    position: relative;
    border-bottom: 1px solid var(--border-color, #e2e8f0);
  }

  .daf-steps li:last-child {
    border-bottom: none;
  }

  .daf-steps li::before {
    content: counter(steps);
    position: absolute;
    left: 0;
    top: 1rem;
    width: 2rem;
    height: 2rem;
    background: var(--primary-navy);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    font-size: 0.875rem;
  }

  .daf-benefits {
    background: var(--cream);
    border-radius: 12px;
    padding: 2rem;
    margin-bottom: 3rem;
  }

  .daf-benefits h3 {
    margin-bottom: 1.5rem;
    color: var(--primary-navy);
  }

  .daf-benefits ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .daf-benefits li {
    padding: 0.75rem 0;
    padding-left: 2rem;
    position: relative;
  }

  .daf-benefits li::before {
    content: '';
    position: absolute;
    left: 0;
    top: 1.1rem;
    width: 8px;
    height: 8px;
    background: var(--primary-blue);
    border-radius: 50%;
  }

  .daf-help {
    margin-bottom: 3rem;
  }

  .daf-help h3 {
    margin-bottom: 1rem;
    color: var(--primary-navy);
  }

  .daf-cta {
    text-align: center;
    padding: 2rem 0;
    border-top: 1px solid var(--border-color, #e2e8f0);
  }

  .daf-cta p {
    margin-bottom: 1.5rem;
    color: var(--text-light);
  }
</style>
