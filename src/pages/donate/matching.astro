---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';

const structuredData = [
  {
    '@context': 'https://schema.org',
    '@type': 'WebPage',
    name: 'Double Your Donation - Corporate Matching Gifts',
    description:
      'Find out if your employer will match your donation to Bay Tides and double your impact.',
    url: 'https://baytides.org/donate/matching',
    isPartOf: {
      '@type': 'WebSite',
      name: 'Bay Tides',
      url: 'https://baytides.org',
    },
  },
  {
    '@context': 'https://schema.org',
    '@type': 'BreadcrumbList',
    itemListElement: [
      { '@type': 'ListItem', position: 1, name: 'Home', item: 'https://baytides.org/' },
      { '@type': 'ListItem', position: 2, name: 'Donate', item: 'https://baytides.org/donate' },
      { '@type': 'ListItem', position: 3, name: 'Matching Gifts' },
    ],
  },
];
---

<BaseLayout
  title="Double Your Donation"
  description="Many employers match charitable donations. Use our matching gift tool to find out if your company will double your gift to Bay Tides."
  canonicalUrl="https://baytides.org/donate/matching"
  structuredData={structuredData}
>
  <Breadcrumb
    items={[
      { label: 'Home', href: '/' },
      { label: 'Donate', href: '/donate' },
      { label: 'Matching Gifts' },
    ]}
  />

  <!-- Hero Section -->
  <section class="matching-hero">
    <div class="container">
      <div class="hero-content">
        <span class="hero-badge">Corporate Matching</span>
        <h1>Double Your Impact</h1>
        <p>
          Many employers match charitable contributions, which means your donation could have twice
          the impact for the San Francisco Bay.
        </p>
      </div>
      <div class="hero-stats">
        <div class="stat-card">
          <span class="stat-number">26M+</span>
          <span class="stat-label">People work for matching gift companies</span>
        </div>
        <div class="stat-card">
          <span class="stat-number">$2-4B</span>
          <span class="stat-label">In matching gifts go unclaimed each year</span>
        </div>
        <div class="stat-card">
          <span class="stat-number">65%</span>
          <span class="stat-label">Of Fortune 500 companies offer matching</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Search Widget Section -->
  <section class="matching-search-section">
    <div class="container">
      <div class="search-card">
        <div class="search-header">
          <h2>Check If Your Employer Matches</h2>
          <p>Enter your employer's name below to see if they have a matching gift program</p>
        </div>

        <div class="matching-widget">
          <div class="matching-search-container">
            <!-- Double the Donation 360MatchPro Plugin -->
            <link href="https://doublethedonation.com/api/css/ddplugin.css" rel="stylesheet" />
            <div id="dd-container" class="dtd-widget-container"></div>
            <script is:inline>
              var DDCONF = { API_KEY: '13qDoFLXlus5V13X' };
            </script>
            <script src="https://doublethedonation.com/api/js/ddplugin.js"></script>
          </div>
        </div>

        <div class="common-employers">
          <p class="common-label">Bay Area companies with matching programs:</p>
          <div class="employer-tags">
            <span class="employer-tag">Google</span>
            <span class="employer-tag">Apple</span>
            <span class="employer-tag">Meta</span>
            <span class="employer-tag">Salesforce</span>
            <span class="employer-tag">Cisco</span>
            <span class="employer-tag">Intel</span>
            <span class="employer-tag">NVIDIA</span>
            <span class="employer-tag">Adobe</span>
            <span class="employer-tag">Genentech</span>
            <span class="employer-tag">Gilead</span>
            <span class="employer-tag">Kaiser Permanente</span>
            <span class="employer-tag">Wells Fargo</span>
            <span class="employer-tag">Visa</span>
            <span class="employer-tag">Chevron</span>
            <span class="employer-tag">PG&E</span>
          </div>
          <p class="eligibility-note">
            <svg
              width="16"
              height="16"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <circle cx="12" cy="12" r="10"></circle>
              <line x1="12" y1="16" x2="12" y2="12"></line>
              <line x1="12" y1="8" x2="12.01" y2="8"></line>
            </svg>
            <span>
              <strong>Retired or part-time?</strong> Many companies extend matching programs to retirees
              and part-time employees. Check the database above—you may still be eligible!
            </span>
          </p>
          <p class="database-note">
            <svg
              width="16"
              height="16"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <circle cx="12" cy="12" r="10"></circle>
              <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"></path>
              <line x1="12" y1="17" x2="12.01" y2="17"></line>
            </svg>
            <span>
              <strong>Company not listed?</strong> This database isn't exhaustive—your employer may still
              offer matching gifts. Contact your HR department directly to find out about your company's
              charitable matching program.
            </span>
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- How It Works Section -->
  <section class="how-it-works">
    <div class="container">
      <h2>How Matching Gifts Work</h2>
      <p class="section-subtitle">
        It only takes a few minutes to potentially double your donation
      </p>

      <div class="steps-grid">
        <div class="step-card">
          <div class="step-number">1</div>
          <div class="step-icon">
            <svg
              width="32"
              height="32"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <circle cx="11" cy="11" r="8"></circle>
              <path d="m21 21-4.35-4.35"></path>
            </svg>
          </div>
          <h3>Search</h3>
          <p>Use the tool above to check if your employer offers a matching gift program</p>
        </div>

        <div class="step-connector">
          <svg
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <path d="M5 12h14M12 5l7 7-7 7"></path>
          </svg>
        </div>

        <div class="step-card">
          <div class="step-number">2</div>
          <div class="step-icon">
            <svg
              width="32"
              height="32"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"
              >
              </path>
            </svg>
          </div>
          <h3>Donate</h3>
          <p>
            Make your gift to Bay Tides through our <a href="/checkout">secure donation page</a>
          </p>
        </div>

        <div class="step-connector">
          <svg
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <path d="M5 12h14M12 5l7 7-7 7"></path>
          </svg>
        </div>

        <div class="step-card">
          <div class="step-number">3</div>
          <div class="step-icon">
            <svg
              width="32"
              height="32"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
              <polyline points="14 2 14 8 20 8"></polyline>
              <line x1="16" y1="13" x2="8" y2="13"></line>
              <line x1="16" y1="17" x2="8" y2="17"></line>
              <polyline points="10 9 9 9 8 9"></polyline>
            </svg>
          </div>
          <h3>Submit</h3>
          <p>Complete a matching gift request through your employer's HR portal</p>
        </div>

        <div class="step-connector">
          <svg
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <path d="M5 12h14M12 5l7 7-7 7"></path>
          </svg>
        </div>

        <div class="step-card step-card-highlight">
          <div class="step-number">4</div>
          <div class="step-icon">
            <svg
              width="32"
              height="32"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <path d="M12 2v20M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
            </svg>
          </div>
          <h3>Double!</h3>
          <p>Your employer sends a matching gift, doubling your impact for the Bay</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Impact Section -->
  <section class="matching-impact">
    <div class="container">
      <div class="impact-content">
        <div class="impact-text">
          <h2>Why Matching Gifts Matter</h2>
          <p>
            Corporate matching gifts are one of the most powerful ways to amplify your charitable
            giving. When your employer matches your donation, you effectively double your
            contribution without spending an additional dollar.
          </p>
          <ul class="impact-list">
            <li>
              <svg
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                <polyline points="22 4 12 14.01 9 11.01"></polyline>
              </svg>
              <span>Your $100 donation becomes $200 for Bay conservation</span>
            </li>
            <li>
              <svg
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                <polyline points="22 4 12 14.01 9 11.01"></polyline>
              </svg>
              <span>Some employers offer 2:1 or 3:1 matching ratios</span>
            </li>
            <li>
              <svg
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                <polyline points="22 4 12 14.01 9 11.01"></polyline>
              </svg>
              <span>Many programs also match volunteer hours with grants</span>
            </li>
            <li>
              <svg
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                <polyline points="22 4 12 14.01 9 11.01"></polyline>
              </svg>
              <span>Retired employees often remain eligible for matching</span>
            </li>
          </ul>
        </div>
        <div class="impact-visual">
          <div class="donation-multiplier">
            <div class="multiplier-row">
              <span class="multiplier-label">Your Gift</span>
              <span class="multiplier-amount">$100</span>
            </div>
            <div class="multiplier-plus">+</div>
            <div class="multiplier-row">
              <span class="multiplier-label">Employer Match</span>
              <span class="multiplier-amount">$100</span>
            </div>
            <div class="multiplier-equals">=</div>
            <div class="multiplier-row multiplier-total">
              <span class="multiplier-label">Total Impact</span>
              <span class="multiplier-amount">$200</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Help Section -->
  <section class="matching-help-section">
    <div class="container">
      <div class="help-card">
        <div class="help-icon">
          <svg
            width="40"
            height="40"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <circle cx="12" cy="12" r="10"></circle>
            <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"></path>
            <line x1="12" y1="17" x2="12.01" y2="17"></line>
          </svg>
        </div>
        <div class="help-content">
          <h3>Need Help with Your Match?</h3>
          <p>
            If you have questions about matching gifts or need documentation for your employer's
            program, we're here to help. Contact us for:
          </p>
          <ul>
            <li>Tax receipts and donation verification letters</li>
            <li>Our EIN and nonprofit documentation</li>
            <li>Assistance completing matching gift forms</li>
          </ul>
          <div class="help-details">
            <p>
              <strong>Bay Tides EIN:</strong> 93-3889081
            </p>
            <p>
              <strong>Organization:</strong> Bay Tides, Inc.
            </p>
          </div>
          <a href="/contact" class="btn btn-secondary">Contact Us</a>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="matching-cta-section">
    <div class="container">
      <div class="cta-content">
        <h2>Ready to Double Your Impact?</h2>
        <p>Make a donation today, then submit your matching gift request to your employer.</p>
        <div class="cta-buttons">
          <a href="/checkout" class="btn btn-primary btn-large">Donate Now</a>
          <a href="/donate" class="btn btn-outline">Other Ways to Give</a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Hero Section */
  .matching-hero {
    background: linear-gradient(135deg, var(--primary-navy) 0%, #1a365d 100%);
    padding: 4rem 0 5rem;
    color: #fff;
    position: relative;
    overflow: hidden;
  }

  .matching-hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.03'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
    pointer-events: none;
  }

  .matching-hero .container {
    position: relative;
    z-index: 1;
  }

  .hero-content {
    text-align: center;
    max-width: 700px;
    margin: 0 auto 3rem;
  }

  .hero-badge {
    display: inline-block;
    background: rgba(255, 255, 255, 0.15);
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.875rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    backdrop-filter: blur(10px);
  }

  .matching-hero h1 {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 800;
    margin-bottom: 1rem;
    color: #fff;
  }

  .hero-content p {
    font-size: 1.25rem;
    opacity: 0.9;
    line-height: 1.6;
  }

  .hero-stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
    max-width: 900px;
    margin: 0 auto;
  }

  .stat-card {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border-radius: 12px;
    padding: 1.5rem;
    text-align: center;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .stat-number {
    display: block;
    font-size: 2rem;
    font-weight: 800;
    color: #63b3ed;
    margin-bottom: 0.5rem;
  }

  .stat-label {
    font-size: 0.875rem;
    opacity: 0.85;
    line-height: 1.4;
  }

  /* Search Section */
  .matching-search-section {
    margin-top: -3rem;
    padding-bottom: 4rem;
    position: relative;
    z-index: 2;
  }

  .search-card {
    background: #fff;
    border-radius: 20px;
    padding: 2.5rem;
    box-shadow:
      0 20px 60px -10px rgba(0, 0, 0, 0.15),
      0 0 0 1px rgba(0, 0, 0, 0.03);
    max-width: 800px;
    margin: 0 auto;
  }

  .search-header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .search-header h2 {
    font-size: 1.5rem;
    color: var(--primary-navy);
    margin-bottom: 0.5rem;
  }

  .search-header p {
    color: var(--text-light);
  }

  .matching-widget {
    margin-bottom: 1.5rem;
  }

  .matching-search-container {
    max-width: 600px;
    margin: 0 auto;
  }

  .dtd-widget-container {
    position: relative;
    min-height: 60px;
  }

  /* Double the Donation Widget Overrides */
  #dd-container {
    font-family: inherit;
  }

  #dd-container,
  #dd-container * {
    color: #1a202c;
  }

  #dd-container h3,
  #dd-container h4 {
    color: #1a365d !important;
    margin-bottom: 0.75rem !important;
  }

  #dd-container p {
    color: #1a202c !important;
    line-height: 1.6 !important;
  }

  #dd-container a {
    color: #1e40af !important;
  }

  #dd-container a:hover {
    color: #1e3a8a !important;
  }

  #dd-container input,
  #dd-container input[type='text'] {
    width: 100% !important;
    padding: 1rem 1.25rem !important;
    font-size: 1rem !important;
    font-family: inherit !important;
    border: 2px solid #e2e8f0 !important;
    border-radius: 12px !important;
    background: #fff !important;
    color: #1a202c !important;
    box-sizing: border-box !important;
  }

  #dd-container input:focus,
  #dd-container input[type='text']:focus {
    outline: none !important;
    border-color: #2b6cb0 !important;
    box-shadow: 0 0 0 3px rgba(43, 108, 176, 0.15) !important;
  }

  #dd-container input::placeholder,
  #dd-container input[type='text']::placeholder {
    color: #718096 !important;
  }

  #dd-container ul {
    list-style: none !important;
    margin: 0 !important;
    padding: 0 !important;
    background: #fff !important;
    border: 2px solid #2b6cb0 !important;
    border-top: none !important;
    border-radius: 0 0 12px 12px !important;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15) !important;
    max-height: 300px !important;
    overflow-y: auto !important;
  }

  #dd-container li {
    padding: 0.875rem 1.25rem !important;
    cursor: pointer !important;
    color: #1a202c !important;
    font-size: 0.9375rem !important;
    border-bottom: 1px solid #e2e8f0 !important;
    background: #fff !important;
    margin: 0 !important;
  }

  #dd-container li:last-child {
    border-bottom: none !important;
    border-radius: 0 0 10px 10px !important;
  }

  #dd-container li:hover {
    background: #f0f7ff !important;
  }

  #dd-container button {
    display: inline-block !important;
    padding: 0.75rem 1.5rem !important;
    background: #2b6cb0 !important;
    color: #fff !important;
    border: none !important;
    border-radius: 8px !important;
    font-weight: 600 !important;
    cursor: pointer !important;
  }

  #dd-container button:hover {
    background: #1a365d !important;
  }

  /* Common Employers */
  .common-employers {
    text-align: center;
    padding-top: 1.5rem;
    border-top: 1px solid #e2e8f0;
  }

  .common-label {
    font-size: 0.875rem;
    color: var(--text-light);
    margin-bottom: 0.75rem;
  }

  .employer-tags {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.5rem;
  }

  .employer-tag {
    display: inline-block;
    background: #f0f7fa;
    color: var(--primary-navy);
    padding: 0.375rem 0.75rem;
    border-radius: 20px;
    font-size: 0.8125rem;
    font-weight: 500;
  }

  .eligibility-note {
    display: flex;
    align-items: flex-start;
    gap: 0.625rem;
    margin-top: 1.25rem;
    padding: 1rem;
    background: linear-gradient(135deg, #fffbeb 0%, #fef3c7 100%);
    border-radius: 10px;
    border-left: 3px solid #f59e0b;
    font-size: 0.9rem;
    line-height: 1.5;
    color: #92400e;
  }

  .eligibility-note svg {
    flex-shrink: 0;
    color: #f59e0b;
    margin-top: 0.125rem;
  }

  .eligibility-note strong {
    color: #78350f;
  }

  .database-note {
    display: flex;
    align-items: flex-start;
    gap: 0.625rem;
    margin-top: 0.75rem;
    padding: 1rem;
    background: linear-gradient(135deg, #f0f7fa 0%, #e8f4f8 100%);
    border-radius: 10px;
    border-left: 3px solid var(--primary-blue);
    font-size: 0.9rem;
    line-height: 1.5;
    color: var(--text-dark);
  }

  .database-note svg {
    flex-shrink: 0;
    color: var(--primary-blue);
    margin-top: 0.125rem;
  }

  .database-note strong {
    color: var(--primary-navy);
  }

  /* How It Works Section */
  .how-it-works {
    padding: 5rem 0;
    background: linear-gradient(180deg, #f8fafc 0%, #fff 100%);
  }

  .how-it-works h2 {
    text-align: center;
    font-size: 2rem;
    color: var(--primary-navy);
    margin-bottom: 0.75rem;
  }

  .section-subtitle {
    text-align: center;
    color: var(--text-light);
    font-size: 1.125rem;
    margin-bottom: 3rem;
  }

  .steps-grid {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    max-width: 1100px;
    margin: 0 auto;
    flex-wrap: wrap;
  }

  .step-card {
    background: #fff;
    border-radius: 16px;
    padding: 2rem 1.5rem;
    text-align: center;
    box-shadow:
      0 4px 6px -1px rgba(0, 0, 0, 0.05),
      0 10px 20px -5px rgba(0, 0, 0, 0.08);
    position: relative;
    flex: 1;
    min-width: 180px;
    max-width: 220px;
  }

