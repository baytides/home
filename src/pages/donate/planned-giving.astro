    background: rgba(252, 129, 129, 0.15);
    color: #feb2b2;
  }
</style>

<script>
  // Gift Finder Tool
  document.addEventListener('DOMContentLoaded', () => {
    const questionScreen = document.querySelector('.finder-question') as HTMLElement;
    const optionBtns = document.querySelectorAll('.option-btn');
    const resultScreens = document.querySelectorAll('.finder-result');
    const backBtns = document.querySelectorAll('.btn-back');
    const copyBtns = document.querySelectorAll('.copy-btn');

    // Bequest language text
    const bequestText = `I give, devise, and bequeath [specific dollar amount, percentage, or description of property] to Bay Tides, a California nonprofit corporation (EIN: 93-3889081), located at 274 Redwood Shores Pkwy #619, Redwood City, CA 94065, to be used for its general charitable purposes.`;

    // Organization info text
    const orgInfoText = `Bay Tides
EIN / Tax ID: 93-3889081
Address: 274 Redwood Shores Pkwy #619, Redwood City, CA 94065
Tax Status: 501(c)(3) Public Charity`;

    function showResult(resultId: string) {
      // Hide question
      questionScreen.classList.remove('active');

      // Hide all results
      resultScreens.forEach((screen) => {
        screen.classList.remove('active');
        screen.setAttribute('aria-hidden', 'true');
      });

      // Show selected result
      const targetResult = document.querySelector(`[data-result="${resultId}"]`);
      if (targetResult) {
        targetResult.classList.add('active');
        targetResult.setAttribute('aria-hidden', 'false');
        // Focus the result header for screen readers
        const header = targetResult.querySelector('h4');
        if (header) {
          (header as HTMLElement).setAttribute('tabindex', '-1');
          (header as HTMLElement).focus();
        }
      }
    }

    function resetToQuestion() {
      // Hide all results
      resultScreens.forEach((screen) => {
        screen.classList.remove('active');
        screen.setAttribute('aria-hidden', 'true');
      });

      // Show question
      questionScreen.classList.add('active');

      // Reset button states
      optionBtns.forEach((btn) => {
        btn.setAttribute('aria-checked', 'false');
      });
    }

    // Option button click handlers
    optionBtns.forEach((btn) => {
      btn.addEventListener('click', () => {
        const answer = btn.getAttribute('data-answer');
        if (answer) {
          // Update aria state
          optionBtns.forEach((b) => b.setAttribute('aria-checked', 'false'));
          btn.setAttribute('aria-checked', 'true');
          showResult(answer);
        }
      });

      // Keyboard support
      btn.addEventListener('keydown', (e: KeyboardEvent) => {
        if (e.key === 'Enter' || e.key === ' ') {
          e.preventDefault();
          btn.click();
        }
      });
    });

    // Back button handlers
    backBtns.forEach((btn) => {
      btn.addEventListener('click', resetToQuestion);
    });

    // Copy button handlers
    copyBtns.forEach((btn) => {
      btn.addEventListener('click', async () => {
        const copyType = btn.getAttribute('data-copy');
        let textToCopy = '';

        if (copyType === 'bequest') {
          textToCopy = bequestText;
        } else if (copyType === 'orginfo') {
          textToCopy = orgInfoText;
        }

        try {
          await navigator.clipboard.writeText(textToCopy);
          const span = btn.querySelector('span');
          const originalText = span?.textContent || '';
          if (span) {
            span.textContent = 'Copied!';
            btn.classList.add('copied');
          }
          setTimeout(() => {
            if (span) {
              span.textContent = originalText;
              btn.classList.remove('copied');
            }
          }, 2000);
        } catch (err) {
          console.error('Failed to copy:', err);
        }
      });
    });
  });
</script>
