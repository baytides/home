---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';

const structuredData = [
  {
    '@context': 'https://schema.org',
    '@type': 'WebPage',
    name: 'Planned Giving & Bequests',
    description:
      'Leave a lasting legacy for the San Francisco Bay through planned giving, bequests, and estate gifts to Bay Tides.',
    url: 'https://baytides.org/donate/planned-giving',
  },
  {
    '@context': 'https://schema.org',
    '@type': 'BreadcrumbList',
    itemListElement: [
      { '@type': 'ListItem', position: 1, name: 'Home', item: 'https://baytides.org/' },
      { '@type': 'ListItem', position: 2, name: 'Donate', item: 'https://baytides.org/donate' },
      { '@type': 'ListItem', position: 3, name: 'Planned Giving' },
    ],
  },
];
---

<BaseLayout
  title="Planned Giving & Bequests"
  description="Create a lasting legacy for the San Francisco Bay through planned giving. Learn about bequests, beneficiary designations, and other ways to include Bay Tides in your estate plans."
  canonicalUrl="https://baytides.org/donate/planned-giving"
  structuredData={structuredData}
>
  <Breadcrumb
    items={[
      { label: 'Home', href: '/' },
      { label: 'Donate', href: '/donate' },
      { label: 'Planned Giving' },
    ]}
  />

  <section class="hero hero-page">
    <div class="container">
      <h1>Planned Giving</h1>
      <p>Create a lasting legacy for the San Francisco Bay</p>
    </div>
  </section>

  <section class="content-section">
    <div class="container">
      <div class="planned-content">
        <div class="planned-intro">
          <h2>Leave a Legacy</h2>
          <p>
            A planned gift to Bay Tides ensures that your commitment to protecting the San Francisco
            Bay continues for generations to come. Whether you're including us in your will or
            naming us as a beneficiary, every gift—large or small—makes a lasting difference.
          </p>
        </div>

        <!-- Interactive Gift Finder Tool -->
        <div class="gift-finder" role="region" aria-labelledby="gift-finder-heading">
          <div class="gift-finder-header">
            <div class="finder-icon">
              <!-- Lucide: compass -->
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="28"
                height="28"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                aria-hidden="true"
              >
                <circle cx="12" cy="12" r="10"></circle><polygon
                  points="16.24 7.76 14.12 14.12 7.76 16.24 9.88 9.88 16.24 7.76"
                >
                </polygon>
              </svg>
            </div>
            <div>
              <h3 id="gift-finder-heading">Find Your Giving Option</h3>
              <p>
                Answer a few questions to discover which planned giving approach fits your
                situation.
              </p>
            </div>
          </div>

          <div class="finder-content">
            <!-- Question Screen -->
            <div
              class="finder-question active"
              data-step="1"
              role="group"
              aria-labelledby="q1-label"
            >
              <p class="question-label" id="q1-label">How would you like to support Bay Tides?</p>
              <div class="question-options" role="radiogroup" aria-labelledby="q1-label">
                <button class="option-btn" data-answer="will" role="radio" aria-checked="false">
                  <span class="option-icon">
                    <!-- Lucide: file-text -->
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="24"
                      height="24"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      aria-hidden="true"
                    >
                      <path
                        d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"
                      >
                      </path><polyline points="14 2 14 8 20 8"></polyline><line
                        x1="16"
                        y1="13"
                        x2="8"
                        y2="13"
                      >
                      </line><line x1="16" y1="17" x2="8" y2="17"></line><line
                        x1="10"
                        y1="9"
                        x2="8"
                        y2="9"
                      >
                      </line>
                    </svg>
                  </span>
                  <span class="option-text">
                    <strong>Through my will or trust</strong>
                    <span>Include Bay Tides in your estate plans</span>
                  </span>
                </button>
                <button
                  class="option-btn"
                  data-answer="retirement"
                  role="radio"
                  aria-checked="false"
                >
                  <span class="option-icon">
                    <!-- Lucide: piggy-bank -->
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="24"
                      height="24"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      aria-hidden="true"
                    >
                      <path
                        d="M19 5c-1.5 0-2.8 1.4-3 2-3.5-1.5-11-.3-11 5 0 1.8 0 3 2 4.5V20h4v-2h3v2h4v-4c1-.5 1.7-1 2-2h2v-4h-2c0-1-.5-1.5-1-2h0V5z"
                      >
                      </path><path d="M2 9v1c0 1.1.9 2 2 2h1"></path><path d="M16 11h0"></path>
                    </svg>
                  </span>
                  <span class="option-text">
                    <strong>Through my retirement account</strong>
                    <span>IRA, 401(k), or pension beneficiary</span>
                  </span>
                </button>
                <button
                  class="option-btn"
                  data-answer="insurance"
                  role="radio"
                  aria-checked="false"
                >
                  <span class="option-icon">
                    <!-- Lucide: shield -->
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="24"
                      height="24"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      aria-hidden="true"
                    >
                      <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                    </svg>
                  </span>
                  <span class="option-text">
                    <strong>Through life insurance</strong>
                    <span>Name Bay Tides as a policy beneficiary</span>
                  </span>
                </button>
                <button class="option-btn" data-answer="income" role="radio" aria-checked="false">
                  <span class="option-icon">
                    <!-- Lucide: trending-up -->
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="24"
                      height="24"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      aria-hidden="true"
                    >
                      <polyline points="23 6 13.5 15.5 8.5 10.5 1 18"></polyline><polyline
                        points="17 6 23 6 23 12"
                      >
                      </polyline>
                    </svg>
                  </span>
                  <span class="option-text">
                    <strong>I'd like income while giving</strong>
                    <span>Receive payments during your lifetime</span>
                  </span>
                </button>
                <button class="option-btn" data-answer="all" role="radio" aria-checked="false">
                  <span class="option-icon">
                    <!-- Lucide: list -->
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="24"
                      height="24"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      aria-hidden="true"
                    >
                      <line x1="8" y1="6" x2="21" y2="6"></line><line
                        x1="8"
                        y1="12"
                        x2="21"
                        y2="12"
                      >
                      </line><line x1="8" y1="18" x2="21" y2="18"></line><line
                        x1="3"
                        y1="6"
                        x2="3.01"
                        y2="6"
                      >
                      </line><line x1="3" y1="12" x2="3.01" y2="12"></line><line
                        x1="3"
                        y1="18"
                        x2="3.01"
                        y2="18"
                      >
                      </line>
                    </svg>
                  </span>
                  <span class="option-text">
                    <strong>Show me all options</strong>
                    <span>Compare different giving approaches</span>
                  </span>
                </button>
              </div>
            </div>

            <!-- Result Screens -->
            <div class="finder-result" data-result="will" aria-hidden="true">
              <div class="result-header">
                <span class="result-badge">Recommended for You</span>
                <h4>Bequest in Your Will or Trust</h4>
              </div>
              <div class="result-body">
                <p>
                  The simplest and most popular way to make a planned gift. You can designate a
                  specific dollar amount, a percentage of your estate, or the remainder after other
                  bequests.
                </p>
                <div class="result-benefits">
                  <div class="benefit-tag">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="16"
                      height="16"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      aria-hidden="true"
                    >
                      <polyline points="20 6 9 17 4 12"></polyline>
                    </svg> Easy to set up
                  </div>
                  <div class="benefit-tag">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="16"
                      height="16"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      aria-hidden="true"
                    >
                      <polyline points="20 6 9 17 4 12"></polyline>
                    </svg> Can be changed anytime
                  </div>
                  <div class="benefit-tag">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="16"
                      height="16"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      aria-hidden="true"
                    >
                      <polyline points="20 6 9 17 4 12"></polyline>
                    </svg> Reduces estate taxes
                  </div>
                  <div class="benefit-tag">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="16"
                      height="16"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      aria-hidden="true"
                    >
                      <polyline points="20 6 9 17 4 12"></polyline>
                    </svg> Any amount welcome
                  </div>
                </div>
                <div class="sample-language">
                  <p><strong>Sample Bequest Language:</strong></p>
                  <blockquote>
                    "I give, devise, and bequeath [specific dollar amount, percentage, or
                    description of property] to Bay Tides, a California nonprofit corporation (EIN:
                    93-3889081), located at 274 Redwood Shores Pkwy #619, Redwood City, CA 94065, to
                    be used for its general charitable purposes."
                  </blockquote>
                  <button
                    class="copy-btn"
                    data-copy="bequest"
                    aria-label="Copy bequest language to clipboard"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="16"
                      height="16"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      aria-hidden="true"
                    >
                      <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect><path
                        d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"
                      >
                      </path>
                    </svg>
                    <span>Copy to clipboard</span>
                  </button>
                </div>
                <p class="result-note">
                  Share this language with your attorney or add it to your will or trust document.
                </p>
              </div>
              <button class="btn-back" aria-label="Go back to questions">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="16"
                  height="16"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  aria-hidden="true"
                >
                  <path d="m15 18-6-6 6-6"></path>
                </svg>
                Start over
              </button>
            </div>

            <div class="finder-result" data-result="retirement" aria-hidden="true">
              <div class="result-header">
                <span class="result-badge">Recommended for You</span>
                <h4>Retirement Account Beneficiary</h4>
              </div>
              <div class="result-body">
                <p>
                  Name Bay Tides as a beneficiary of your IRA, 401(k), 403(b), or pension. This is
                  one of the most tax-efficient ways to give—your heirs avoid income tax on
                  inherited retirement funds.
                </p>
                <div class="result-benefits">
                  <div class="benefit-tag">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="16"
                      height="16"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      aria-hidden="true"
                    >
                      <polyline points="20 6 9 17 4 12"></polyline>
                    </svg> No attorney needed
                  </div>
                  <div class="benefit-tag">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="16"
                      height="16"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      aria-hidden="true"
                    >
                      <polyline points="20 6 9 17 4 12"></polyline>
                    </svg> Update anytime
                  </div>
                  <div class="benefit-tag">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="16"
                      height="16"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      aria-hidden="true"
                    >
                      <polyline points="20 6 9 17 4 12"></polyline>
                    </svg> Tax-efficient for heirs
                  </div>
                  <div class="benefit-tag">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="16"
                      height="16"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      aria-hidden="true"
                    >
                      <polyline points="20 6 9 17 4 12"></polyline>
                    </svg> Partial or full amount
                  </div>
                </div>
                <div class="how-to-box">
                  <h5>How to designate Bay Tides:</h5>
                  <ol>
                    <li>Contact your plan administrator or log into your account</li>
                    <li>Request a beneficiary change form</li>
                    <li>List Bay Tides as primary or secondary beneficiary</li>
                    <li>Use our EIN: <strong>93-3889081</strong></li>
                  </ol>
                </div>
                <p class="result-note">
                  You can designate any percentage—even 5% or 10% makes a difference.
                </p>
              </div>
              <button class="btn-back" aria-label="Go back to questions">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="16"
                  height="16"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  aria-hidden="true"
                >
                  <path d="m15 18-6-6 6-6"></path>
                </svg>
                Start over
              </button>
            </div>

            <div class="finder-result" data-result="insurance" aria-hidden="true">
              <div class="result-header">
                <span class="result-badge">Recommended for You</span>
                <h4>Life Insurance Beneficiary</h4>
              </div>
              <div class="result-body">
                <p>
                  Designate Bay Tides as a beneficiary of your life insurance policy. This is
                  especially meaningful if you have a policy you no longer need for its original
                  purpose.
                </p>
                <div class="result-benefits">
                  <div class="benefit-tag">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="16"
                      height="16"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      aria-hidden="true"
                    >
                      <polyline points="20 6 9 17 4 12"></polyline>
                    </svg> Simple form change
                  </div>
                  <div class="benefit-tag">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="16"
                      height="16"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      aria-hidden="true"
                    >
                      <polyline points="20 6 9 17 4 12"></polyline>
                    </svg> Revocable anytime
                  </div>
                  <div class="benefit-tag">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="16"
                      height="16"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      aria-hidden="true"
                    >
                      <polyline points="20 6 9 17 4 12"></polyline>
                    </svg> Estate tax benefits
                  </div>
                  <div class="benefit-tag">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="16"
                      height="16"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      aria-hidden="true"
                    >
                      <polyline points="20 6 9 17 4 12"></polyline>
                    </svg> Multiplies your impact
                  </div>
                </div>
                <div class="how-to-box">
                  <h5>How to designate Bay Tides:</h5>
                  <ol>
                    <li>Contact your insurance company</li>
                    <li>Request a beneficiary change form</li>
                    <li>List Bay Tides with our EIN: <strong>93-3889081</strong></li>
                    <li>Choose a percentage or the full policy</li>
                  </ol>
                </div>
                <p class="result-note">
                  Even naming us as a secondary beneficiary ensures your wishes are honored.
                </p>
              </div>
              <button class="btn-back" aria-label="Go back to questions">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="16"
                  height="16"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  aria-hidden="true"
                >
                  <path d="m15 18-6-6 6-6"></path>
                </svg>
                Start over
              </button>
            </div>

            <div class="finder-result" data-result="income" aria-hidden="true">
              <div class="result-header">
                <span class="result-badge">Recommended for You</span>
                <h4>Income-Generating Gifts</h4>
              </div>
              <div class="result-body">
                <p>
                  These options let you support Bay Tides while receiving income during your
                  lifetime. They're ideal if you have appreciated assets and want both income and
                  tax benefits.
                </p>

                <div class="income-options">
                  <div class="income-option">
                    <h5>Charitable Gift Annuity</h5>
                    <p>
                      Make a gift and receive fixed payments for life. Rates are based on your
                      age—older donors receive higher rates.
                    </p>
                    <div class="mini-benefits">
                      <span>Fixed income for life</span>
                      <span>Immediate tax deduction</span>
                      <span>Partially tax-free payments</span>
                    </div>
                  </div>
                  <div class="income-option">
                    <h5>Charitable Remainder Trust</h5>
                    <p>
                      Transfer assets into a trust that pays you (or beneficiaries) income, with the
                      remainder going to Bay Tides.
                    </p>
                    <div class="mini-benefits">
                      <span>Flexible payment options</span>
                      <span>Avoid capital gains tax</span>
                      <span>Reduce estate taxes</span>
                    </div>
                  </div>
                </div>

                <p class="result-note">
                  These gifts typically require working with a financial advisor. We're happy to
                  provide information to share with your advisor.
                </p>
              </div>
              <button class="btn-back" aria-label="Go back to questions">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="16"
                  height="16"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  aria-hidden="true"
                >
                  <path d="m15 18-6-6 6-6"></path>
                </svg>
                Start over
              </button>
            </div>

            <div class="finder-result" data-result="all" aria-hidden="true">
              <div class="result-header">
                <h4>Compare All Giving Options</h4>
              </div>
              <div class="result-body">
                <div class="comparison-table-wrapper">
                  <table class="comparison-table" role="table">
                    <thead>
                      <tr>
                        <th scope="col">Option</th>
                        <th scope="col">Best For</th>
                        <th scope="col">Complexity</th>
                        <th scope="col">Can Change?</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <th scope="row">Bequest (Will/Trust)</th>
                        <td>Anyone with a will</td>
                        <td><span class="complexity-tag simple">Simple</span></td>
                        <td>Yes</td>
                      </tr>
                      <tr>
                        <th scope="row">Retirement Beneficiary</th>
                        <td>IRA/401(k) holders</td>
                        <td><span class="complexity-tag simple">Simple</span></td>
                        <td>Yes</td>
                      </tr>
                      <tr>
                        <th scope="row">Life Insurance</th>
                        <td>Policy owners</td>
                        <td><span class="complexity-tag simple">Simple</span></td>
                        <td>Yes</td>
                      </tr>
                      <tr>
                        <th scope="row">Charitable Gift Annuity</th>
                        <td>Those wanting income</td>
                        <td><span class="complexity-tag moderate">Moderate</span></td>
                        <td>No</td>
                      </tr>
                      <tr>
                        <th scope="row">Charitable Remainder Trust</th>
                        <td>Those with appreciated assets</td>
                        <td><span class="complexity-tag complex">Complex</span></td>
                        <td>No</td>
                      </tr>
                      <tr>
                        <th scope="row">Charitable Lead Trust</th>
                        <td>Those passing wealth to heirs</td>
                        <td><span class="complexity-tag complex">Complex</span></td>
                        <td>No</td>
                      </tr>
                    </tbody>
                  </table>
                </div>
                <p class="result-note">
                  Not sure which is right for you? <a href="/contact">Contact us</a> to discuss your situation.
                </p>
              </div>
              <button class="btn-back" aria-label="Go back to questions">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="16"
                  height="16"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  aria-hidden="true"
                >
                  <path d="m15 18-6-6 6-6"></path>
                </svg>
                Start over
              </button>
            </div>
          </div>
        </div>

        <!-- Visual Ways to Give Cards -->
        <div class="giving-cards">
          <h3>Ways to Give at a Glance</h3>
          <div class="cards-grid">
            <div class="giving-card">
              <div class="card-icon">
                <!-- Lucide: file-text -->
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="32"
                  height="32"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
