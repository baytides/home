---
import BaseLayout from '../layouts/BaseLayout.astro';
import PageHero from '../components/PageHero.astro';
import Card from '../components/Card.astro';

const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'NonprofitOrganization',
  name: 'Bay Tides',
  url: 'https://baytides.org',
  logo: 'https://baytides.org/assets/images/logo.png',
  description:
    "Bay Tides uses technology to protect and preserve the San Francisco Bay's environment through education, community mobilization, and innovation.",
  foundingDate: '2023',
  areaServed: {
    '@type': 'Place',
    name: 'San Francisco Bay Area, California',
  },
  sameAs: [],
  contactPoint: {
    '@type': 'ContactPoint',
    contactType: 'General Inquiries',
    url: 'https://baytides.org/contact',
  },
};
---

<BaseLayout
  title="Bay Tides | Protecting the San Francisco Bay"
  description="Bay Tides uses technology to protect and preserve the San Francisco Bay's environment through education, community mobilization, and innovation."
  canonicalUrl="https://baytides.org/"
  structuredData={structuredData}
  preloadImages={['/assets/video/home-hero-poster.webp']}
>
  <!-- Hero Section -->
  <section class="hero hero-home home-video-hero">
    <video
      class="home-hero-video"
      autoplay
      muted
      loop
      playsinline
      poster="/assets/video/home-hero-poster.webp"
    >
      <source src="/assets/video/home-hero.webm" type="video/webm" />
    </video>
    <div class="home-hero-overlay"></div>
    <div class="container">
      <h1>Protecting the San Francisco Bay</h1>
      <p>
        Using technology to protect and preserve the San Francisco Bay's environment through
        education, community mobilization, and innovation.
      </p>
      <div class="hero-buttons">
        <a href="/volunteer" class="btn btn-primary">Get Involved</a>
        <a href="/donate" class="btn btn-outline">Support Our Mission</a>
      </div>
    </div>
  </section>

  <!-- Mission Preview -->
  <section class="mission-preview">
    <div class="container">
      <div class="mission-content">
        <div class="mission-text">
          <h2>Our Mission</h2>
          <p>
            At Bay Tides, we use technology to protect the natural environment and health of the San
            Francisco Bay. Through digital tools, educational programs, and community mobilization,
            we empower residents to make a meaningful impact in their backyard.
          </p>
          <a href="/about" class="btn btn-secondary">Learn More About Us</a>
        </div>
        <div class="mission-image">
          <picture>
            <source srcset="/assets/images/egret.webp" type="image/webp" />
            <img
              src="/assets/images/egret.jpg"
              alt="Snowy Egret at San Francisco Bay"
              width="600"
              height="400"
              loading="lazy"
            />
          </picture>
        </div>
      </div>
    </div>
  </section>

  <!-- Three Pillars Section -->
  <section class="pillars">
    <div class="container">
      <div class="section-title">
        <h2>What We Do</h2>
        <p>Our approach to protecting the San Francisco Bay</p>
      </div>

      <div class="cards-grid">
        <Card title="Educate" icon="ðŸ“š">
          <p>
            Through workshops, community partnerships, and public programs, we provide accessible
            education on environmental issues and conservation practices.
          </p>
        </Card>

        <Card title="Mobilize" icon="ðŸŒ±">
          <p>
            From habitat restoration to policy advocacy, we empower residents to take action and
            champion initiatives that protect the bay's future.
          </p>
        </Card>

        <Card title="Innovate" icon="ðŸ’»">
          <p>
            We build open-source digital tools like Bay Navigator that make sustainability
            accessible and connect residents with resources for a greener future.
          </p>
        </Card>
      </div>
    </div>
  </section>

  <!-- Impact Statement -->
  <section class="impact">
    <div class="container">
      <div class="impact-content">
        <h2>Why Our Work Matters</h2>
        <p>
          The San Francisco Bay is more than just a natural landmark&mdash;it's a vital ecosystem
          that protects critical and endangered wildlife and enriches our community.
        </p>
        <p class="highlight">
          With your support, we can ensure a thriving, resilient Bay Area for generations to come.
        </p>
        <a href="/donate" class="btn btn-primary">Support Our Mission</a>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="cta">
    <div class="container">
      <h2>Ready to Make a Difference?</h2>
      <p>
        Join our community of dedicated environmental stewards and help protect the San Francisco
        Bay.
      </p>
      <div class="cta-buttons">
        <a href="/volunteer" class="btn btn-primary">Volunteer With Us</a>
        <a href="/contact" class="btn btn-outline">Get in Touch</a>
      </div>
    </div>
  </section>
</BaseLayout>
