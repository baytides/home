---
import BaseLayout from '../layouts/BaseLayout.astro';
import HoverVideo from '../components/HoverVideo.astro';

const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'NonprofitOrganization',
  name: 'Bay Tides',
  url: 'https://baytides.org',
  logo: 'https://baytides.org/assets/images/logo.png',
  description:
    "Bay Tides uses technology to protect and preserve the San Francisco Bay's environment through education, community mobilization, and innovation.",
  foundingDate: '2023',
  areaServed: {
    '@type': 'Place',
    name: 'San Francisco Bay Area, California',
  },
  sameAs: [],
  contactPoint: {
    '@type': 'ContactPoint',
    contactType: 'General Inquiries',
    url: 'https://baytides.org/contact',
  },
};
---

<BaseLayout
  title="Bay Tides | Protecting the San Francisco Bay"
  description="Bay Tides uses technology to protect and preserve the San Francisco Bay's environment through education, community mobilization, and innovation."
  canonicalUrl="https://baytides.org/"
  structuredData={structuredData}
  preloadImages={['/assets/video/home-hero-poster.webp']}
>
  <!-- Hero Section -->
  <section class="hero hero-home home-video-hero" aria-labelledby="home-hero-title">
    <video
      class="home-hero-video"
      autoplay
      muted
      loop
      playsinline
      poster="/assets/video/home-hero-poster.webp"
      aria-hidden="true"
      aria-label="Decorative background video showing the San Francisco Bay coastline"
    >
      <source src="/assets/video/home-hero.webm" type="video/webm" />
      <p>
        Your browser does not support the video element. A decorative video of the San Francisco Bay
        coastline plays here.
      </p>
    </video>
    <div class="home-hero-overlay" aria-hidden="true"></div>
    <div class="container">
      <h1 id="home-hero-title">Protecting the San Francisco Bay</h1>
      <p class="standard-content">
        Using technology to protect and preserve the San Francisco Bay's environment through
        education, community mobilization, and innovation.
      </p>
      <p class="simple-content">
        We use computers and apps to help keep the Bay clean and safe. We teach people how to help,
        and we work together as a community.
      </p>
      <div class="hero-buttons">
        <a href="/volunteer" class="btn btn-primary">Get Involved</a>
      </div>
    </div>
  </section>

  <!-- Wave Divider -->
  <div class="wave-divider-container">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 100" preserveAspectRatio="none">
      <path fill="var(--white, #ffffff)" d="M0,40 C360,100 1080,0 1440,60 L1440,100 L0,100 Z">
      </path>
    </svg>
  </div>

  <!-- Mission Preview -->
  <section class="mission-preview">
    <div class="container">
      <div class="mission-content">
        <div class="mission-text">
          <h2>Our Mission</h2>
          <p class="standard-content">
            At Bay Tides, we use technology to protect the natural environment and health of the San
            Francisco Bay. Through digital tools, educational programs, and community mobilization,
            we empower residents to make a meaningful impact in their backyard.
          </p>
          <p class="simple-content">
            Bay Tides helps keep the Bay healthy. We build apps and websites. We teach people about
            nature. We help neighbors work together to protect their home.
          </p>
          <a href="/about" class="learn-more-link">Learn more about us &rarr;</a>
        </div>
        <div class="mission-image">
          <HoverVideo
            src="/assets/video/bird-home.webm"
            poster="/assets/video/bird-home-poster.jpg"
            alt="Egret wading at sunset"
            width={600}
            height={400}
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Our Projects -->
  <section class="our-projects">
    <div class="container">
      <div class="section-title">
        <h2>Our Projects</h2>
      </div>
      <div class="projects-scroll">
        <div class="projects-grid">
          <a href="https://aegisinitiative.com" target="_blank" rel="noopener" class="project-card">
            <div class="project-logo">
              <picture>
                <source srcset="/assets/images/aegis/aegis-logo-light.webp" type="image/webp" />
                <img
                  src="/assets/images/aegis/aegis-logo-light.svg"
                  alt="Aegis Initiative logo"
                  width="120"
                  height="120"
                  loading="lazy"
                />
              </picture>
            </div>
            <h3>Aegis Initiative</h3>
            <p>
              Connecting veterans with meaningful opportunities to protect the San Francisco Bay.
            </p>
            <span class="project-link">Explore Aegis Initiative &rarr;</span>
          </a>
          <a href="https://baynavigator.org" target="_blank" rel="noopener" class="project-card">
            <div class="project-logo">
              <picture>
                <source srcset="/assets/images/baynavigator-logo-new.webp" type="image/webp" />
                <img
                  src="/assets/images/baynavigator-logo-new.svg"
                  alt="Bay Navigator logo"
                  width="120"
                  height="120"
                  loading="lazy"
                />
              </picture>
            </div>
            <h3>Bay Navigator</h3>
            <p>
              Connecting Bay Area residents with sustainable resources and local conservation
              efforts.
            </p>
            <span class="project-link">Explore Bay Navigator &rarr;</span>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Support Section -->
  <section class="support-cta">
    <div class="container">
      <div class="support-content">
        <p class="support-statement standard-content">
          The San Francisco Bay is a vital ecosystem that protects endangered wildlife and enriches
          our community. With your support, we can ensure a thriving Bay Area for generations to
          come.
        </p>
        <p class="support-statement simple-content">
          The Bay is home to many animals. It makes our area beautiful and healthy. Your help keeps
          the Bay safe for the future.
        </p>
        <a href="/donate" class="btn btn-primary">Support Our Mission</a>
      </div>
    </div>
  </section>
</BaseLayout>
