---
import BaseLayout from '../layouts/BaseLayout.astro';
import Breadcrumb from '../components/Breadcrumb.astro';
import PageHero from '../components/PageHero.astro';
import LegalPageHeader from '../components/LegalPageHeader.astro';
import LegalSection from '../components/LegalSection.astro';

const structuredData = [
  {
    '@context': 'https://schema.org',
    '@type': 'WebPage',
    name: 'Terms of Service',
    description:
      'Bay Tides Terms of Service. Review the terms and conditions for using our website.',
    publisher: {
      '@type': 'NonprofitOrganization',
      name: 'Bay Tides',
      url: 'https://baytides.org',
    },
    dateModified: '2025-02-03',
  },
  {
    '@context': 'https://schema.org',
    '@type': 'BreadcrumbList',
    itemListElement: [
      { '@type': 'ListItem', position: 1, name: 'Home', item: 'https://baytides.org/' },
      { '@type': 'ListItem', position: 2, name: 'Terms of Service' },
    ],
  },
];
---

<BaseLayout
  title="Terms of Service"
  description="Bay Tides Terms of Service. Review the terms and conditions for using our website and services."
  canonicalUrl="https://baytides.org/terms"
  structuredData={structuredData}
>
  <Breadcrumb items={[{ label: 'Home', href: '/' }, { label: 'Terms of Service' }]} />

  <PageHero title="Terms of Service" subtitle="Please read these terms carefully" />

  <section class="content-section legal-page">
    <div class="container">
      <LegalPageHeader
        version="2.0"
        effectiveDate="February 3, 2025"
        lastUpdated="February 3, 2025"
        summary="By using our website, you agree to use it responsibly and legally. We provide our services 'as is' without guarantees. Any disputes will be handled through informal resolution first, then small claims court or regular courts if needed. We're committed to protecting your privacy and making our site accessible to everyone."
      />

      <div class="legal-content">
        <LegalSection
          title="Acceptance of Terms"
          sectionNumber={1}
          simpleSummary="Using our site means you agree to these rules. We may update them, and continued use means you accept changes."
        >
          <svg
            slot="icon"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><polyline
              points="22 4 12 14.01 9 11.01"
            >
            </polyline>
          </svg>
          <p>
            By accessing or using our Site and Services, you acknowledge that you have read,
            understood, and agree to be bound by these Terms, as well as our
            <a href="/privacy">Privacy Policy</a>, which is incorporated herein by reference. We
            reserve the right to modify these Terms at any time. Your continued use of the Services
            after any changes indicates your acceptance of the modified Terms.
          </p>
        </LegalSection>

        <LegalSection
          title="Eligibility"
          sectionNumber={2}
          simpleSummary="You must be at least 13 to use our site. If you're under 18, you need parent/guardian permission."
        >
          <svg
            slot="icon"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path><circle cx="9" cy="7" r="4">
            </circle><path d="M22 21v-2a4 4 0 0 0-3-3.87"></path><path
              d="M16 3.13a4 4 0 0 1 0 7.75"
            >
            </path>
          </svg>
          <p>
            You must be at least 13 years of age to use our Services. If you are under 18, you
            represent that you have your parent or guardian's permission to use the Services. By
            using our Services, you represent and warrant that you meet these eligibility
            requirements.
          </p>
        </LegalSection>

        <LegalSection
          title="Description of Services"
          sectionNumber={3}
          simpleSummary="We're a nonprofit protecting the San Francisco Bay. Our site offers info, volunteer signups, donations, educational content, newsletters, and contact forms."
        >
          <svg
            slot="icon"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path
              d="M2 12c.6.5 1.2 1 2.5 1C7 13 7 11 9.5 11c2.6 0 2.4 2 5 2 2.5 0 2.5-2 5-2 1.3 0 1.9.5 2.5 1"
            >
            </path><path
              d="M2 19c.6.5 1.2 1 2.5 1 2.5 0 2.5-2 5-2 2.6 0 2.4 2 5 2 2.5 0 2.5-2 5-2 1.3 0 1.9.5 2.5 1"
            >
            </path><path
              d="M2 5c.6.5 1.2 1 2.5 1C7 6 7 4 9.5 4c2.6 0 2.4 2 5 2 2.5 0 2.5-2 5-2 1.3 0 1.9.5 2.5 1"
            >
            </path>
          </svg>
